    opacity: 1;
    transform: scale(1);
    z-index: 2;
  }

  .ai-features-collection__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
