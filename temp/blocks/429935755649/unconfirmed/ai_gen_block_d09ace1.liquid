{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-carousel-container-{{ ai_gen_id }} {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .ai-product-carousel-heading-{{ ai_gen_id }} {
    text-align: center;
    font-size: {{ block.settings.heading_size }}px;
    margin-bottom: 40px;
    color: {{ block.settings.text_color }};
  }

  .ai-product-carousel-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.8);
    width: 100%;
    max-width: 300px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-product-card-{{ ai_gen_id }}.ai-active-{{ ai_gen_id }} {
    opacity: 1;
    visibility: visible;
    transform: translate(-50%, -50%) scale(1);
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 10px;
    color: {{ block.settings.text_color }};
    line-height: 1.3;
  }

  .ai-product-card-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-card-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
    margin-bottom: 15px;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    width: 100%;
    text-align: center;
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-carousel-controls-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 30px;
  }

  .ai-carousel-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
    max-width: 400px;
  }

  .ai-carousel-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.text_color }};
    opacity: 0.3;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
    padding: 0;
  }

  .ai-carousel-dot-{{ ai_gen_id }}.ai-active-{{ ai_gen_id }} {
    opacity: 1;
    transform: scale(1.3);
  }

  .ai-carousel-pause-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 8px 16px;
    border-radius: 20px;
    cursor: pointer;
    font-size: 13px;
    transition: background-color 0.3s ease;
  }

  .ai-carousel-pause-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-card-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-carousel-wrapper-{{ ai_gen_id }} {
      min-height: 380px;
    }

    .ai-product-card-{{ ai_gen_id }} {
      max-width: 260px;
    }

    .ai-product-card-content-{{ ai_gen_id }} {
      padding: 15px;
    }

    .ai-product-carousel-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 30px;
    }
  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }}
  class="ai-product-carousel-container-{{ ai_gen_id }}"
  data-display-duration="{{ block.settings.display_duration }}"
  data-autoplay="{{ block.settings.autoplay }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.heading != blank %}
    <h2 class="ai-product-carousel-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}

  {% assign all_products = '' | split: '' %}
  
  {% if block.settings.collections != blank %}
    {% for collection in block.settings.collections %}
      {% for product in collection.products limit: block.settings.products_per_collection %}
        {% assign all_products = all_products | concat: product %}
      {% endfor %}
    {% endfor %}
  {% endif %}

  {% if all_products.size > 0 %}
    <div class="ai-product-carousel-wrapper-{{ ai_gen_id }}">
      {% for product in all_products %}
        <div class="ai-product-card-{{ ai_gen_id }}" data-card-index="{{ forloop.index0 }}">
          <div class="ai-product-card-image-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-product-card-content-{{ ai_gen_id }}">
            <h3 class="ai-product-card-title-{{ ai_gen_id }}">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <div class="ai-product-card-price-{{ ai_gen_id }}">
              {{ product.price | money }}
            </div>
            <a href="{{ product.url }}" class="ai-product-card-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="ai-carousel-controls-{{ ai_gen_id }}">
      <div class="ai-carousel-dots-{{ ai_gen_id }}">
        {% for product in all_products %}
          <button 
            class="ai-carousel-dot-{{ ai_gen_id }}" 
            data-dot-index="{{ forloop.index0 }}"
            aria-label="Gehe zu Produkt {{ forloop.index }}"
          ></button>
        {% endfor %}
      </div>
      {% if block.settings.autoplay %}
        <button class="ai-carousel-pause-{{ ai_gen_id }}" aria-label="Pause">
          <span class="ai-pause-text-{{ ai_gen_id }}">Pause</span>
        </button>
      {% endif %}
    </div>
  {% else %}
    <div class="ai-product-card-empty-{{ ai_gen_id }}">
      Wählen Sie Kollektionen aus, um Produkte anzuzeigen
    </div>
  {% endif %}
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.isPaused = false;
        this.intervalId = null;
      }

      connectedCallback() {
        this.cards = Array.from(this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}'));
        this.dots = Array.from(this.querySelectorAll('.ai-carousel-dot-{{ ai_gen_id }}'));
        this.pauseButton = this.querySelector('.ai-carousel-pause-{{ ai_gen_id }}');
        this.pauseText = this.querySelector('.ai-pause-text-{{ ai_gen_id }}');
        
        this.displayDuration = parseInt(this.dataset.displayDuration) || 3000;
        this.autoplay = this.dataset.autoplay === 'true';

        if (this.cards.length > 0) {
          this.init();
        }
      }

      init() {
        this.showCard(0);
        this.setupDots();
        
        if (this.autoplay && this.pauseButton) {
          this.setupPauseButton();
          this.startAutoplay();
        }
      }

      showCard(index) {
        this.cards.forEach((card, i) => {
          if (i === index) {
            card.classList.add('ai-active-{{ ai_gen_id }}');
          } else {
            card.classList.remove('ai-active-{{ ai_gen_id }}');
          }
        });

        this.dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('ai-active-{{ ai_gen_id }}');
          } else {
            dot.classList.remove('ai-active-{{ ai_gen_id }}');
          }
        });

        this.currentIndex = index;
      }

      nextCard() {
        const nextIndex = (this.currentIndex + 1) % this.cards.length;
        this.showCard(nextIndex);
      }

      setupDots() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.showCard(index);
            if (this.autoplay && !this.isPaused) {
              this.resetAutoplay();
            }
          });
        });
      }

      setupPauseButton() {
        this.pauseButton.addEventListener('click', () => {
          if (this.isPaused) {
            this.startAutoplay();
            this.pauseText.textContent = 'Pause';
          } else {
            this.stopAutoplay();
            this.pauseText.textContent = 'Abspielen';
          }
          this.isPaused = !this.isPaused;
        });
      }

      startAutoplay() {
        this.stopAutoplay();
        this.intervalId = setInterval(() => {
          this.nextCard();
        }, this.displayDuration);
      }

      stopAutoplay() {
        if (this.intervalId) {
          clearInterval(this.intervalId);
          this.intervalId = null;
        }
      }

      resetAutoplay() {
        this.stopAutoplay();
        this.startAutoplay();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

