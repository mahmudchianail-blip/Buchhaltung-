  }
{% endstyle %}

<product-carousel-{{ ai_gen_id }} class="ai-product-carousel-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-carousel-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-product-carousel-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_limit %}
      
      {% if collection.products.size > 0 %}
        <div class="ai-product-carousel-viewport-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-product-carousel-card-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
              <div class="ai-product-card-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-product-card-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </div>

              <div class="ai-product-card-content-{{ ai_gen_id }}">
                {% if block.settings.show_vendor and product.vendor != blank %}
                  <div class="ai-product-card-vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
                {% endif %}

                <h3 class="ai-product-card-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                {% if block.settings.show_price %}
                  <div class="ai-product-card-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                {% endif %}

                {% if block.settings.show_button %}
                  <a href="{{ product.url }}" class="ai-product-card-button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="ai-carousel-controls-{{ ai_gen_id }}">
          <div class="ai-carousel-dots-{{ ai_gen_id }}">
            {% for product in collection.products limit: products_to_show %}
              <button 
                class="ai-carousel-dot-{{ ai_gen_id }}" 
                data-index="{{ forloop.index0 }}"
                aria-label="Gehe zu Produkt {{ forloop.index }}"
              ></button>
            {% endfor %}
          </div>
          <div class="ai-carousel-progress-{{ ai_gen_id }}">
            <span class="ai-current-{{ ai_gen_id }}">1</span> / <span class="ai-total-{{ ai_gen_id }}">{{ products_to_show }}</span>
          </div>
        </div>
      {% else %}
        <div class="ai-product-empty-state-{{ ai_gen_id }}">
          Diese Kollektion enthält keine Produkte.
        </div>
      {% endif %}
    {% else %}
      <div class="ai-product-empty-state-{{ ai_gen_id }}">
        Wählen Sie eine Kollektion aus, um Produkte anzuzeigen.
      </div>
    {% endif %}
  </div>
</product-carousel-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.autoplayInterval = null;
        this.autoplayDelay = {{ block.settings.autoplay_delay }};
        this.autoplayEnabled = {{ block.settings.enable_autoplay }};
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.cards = this.querySelectorAll('.ai-product-carousel-card-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-carousel-dot-{{ ai_gen_id }}');
        this.currentDisplay = this.querySelector('.ai-current-{{ ai_gen_id }}');

        if (this.cards.length === 0) return;

        this.showCard(0, false);
        this.setupDots();
        
        if (this.autoplayEnabled) {
          this.startAutoplay();
          this.setupPauseOnHover();
        }
      }

      showCard(index, animate) {
        if (this.isTransitioning) return;

        if (animate === false) {
          this.cards.forEach((card, i) => {
            card.classList.remove('ai-active-{{ ai_gen_id }}', 'ai-exit-left-{{ ai_gen_id }}', 'ai-enter-right-{{ ai_gen_id }}');
            if (i === index) {
              card.classList.add('ai-active-{{ ai_gen_id }}');
            }
          });
        } else {
          this.isTransitioning = true;
          const currentCard = this.cards[this.currentIndex];
          const nextCard = this.cards[index];

          currentCard.classList.remove('ai-active-{{ ai_gen_id }}');
          currentCard.classList.add('ai-exit-left-{{ ai_gen_id }}');

          nextCard.classList.add('ai-enter-right-{{ ai_gen_id }}');

          setTimeout(() => {
            nextCard.classList.remove('ai-enter-right-{{ ai_gen_id }}');
            nextCard.classList.add('ai-active-{{ ai_gen_id }}');
          }, 50);

          setTimeout(() => {
            currentCard.classList.remove('ai-exit-left-{{ ai_gen_id }}');
            this.isTransitioning = false;
          }, 650);
        }

        this.dots.forEach((dot, i) => {
          dot.classList.toggle('ai-active-{{ ai_gen_id }}', i === index);
        });

        this.currentIndex = index;
        if (this.currentDisplay) {
          this.currentDisplay.textContent = index + 1;
        }
      }

      nextCard() {
        if (this.isTransitioning) return;
        const nextIndex = (this.currentIndex + 1) % this.cards.length;
        this.showCard(nextIndex, true);
      }

      setupDots() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            if (this.autoplayEnabled) {
              this.stopAutoplay();
              this.startAutoplay();
            }
            this.showCard(index, true);
          });
        });
      }

      startAutoplay() {
        this.autoplayInterval = setInterval(() => {
          this.nextCard();
        }, this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      setupPauseOnHover() {
        this.addEventListener('mouseenter', () => {
          this.stopAutoplay();
        });

        this.addEventListener('mouseleave', () => {
          this.startAutoplay();
        });
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('product-carousel-{{ ai_gen_id }}', ProductCarousel{{ ai_gen_id }});
  })();
</script>

