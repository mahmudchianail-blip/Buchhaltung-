{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-cards-container-{{ ai_gen_id }} {
    padding: 40px 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-product-cards-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease, transform 0.6s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }

  .ai-product-card-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-product-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 10px;
    color: {{ block.settings.text_color }};
    line-height: 1.3;
  }

  .ai-product-card-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-product-card-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-product-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    font-weight: 500;
    margin-bottom: 15px;
  }

  .ai-product-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    width: 100%;
    text-align: center;
  }

  .ai-product-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-card-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-product-cards-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: {{ block.settings.card_spacing | times: 0.7 }}px;
    }

    .ai-product-card-content-{{ ai_gen_id }} {
      padding: 15px;
    }
  }
{% endstyle %}

<product-cards-{{ ai_gen_id }}
  class="ai-product-cards-container-{{ ai_gen_id }}"
  data-stagger-delay="{{ block.settings.stagger_delay }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.products.size > 0 %}
    <div class="ai-product-cards-grid-{{ ai_gen_id }}">
      {% for product in block.settings.products %}
        <div class="ai-product-card-{{ ai_gen_id }}" data-index="{{ forloop.index0 }}">
          <div class="ai-product-card-image-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-product-card-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <div class="ai-product-card-content-{{ ai_gen_id }}">
            <h3 class="ai-product-card-title-{{ ai_gen_id }}">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <div class="ai-product-card-price-{{ ai_gen_id }}">
              {{ product.price | money }}
            </div>
            <a href="{{ product.url }}" class="ai-product-card-button-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-product-card-empty-{{ ai_gen_id }}">
      Wählen Sie Produkte aus, um sie hier anzuzeigen
    </div>
  {% endif %}
</product-cards-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductCards{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.cards = [];
        this.observer = null;
      }

      connectedCallback() {
        this.cards = Array.from(this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}'));
        this.staggerDelay = parseInt(this.dataset.staggerDelay) || 150;
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px',
          threshold: 0.1
        };

        this.observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              const card = entry.target;
              const index = parseInt(card.dataset.index);
              const delay = index * this.staggerDelay;

              setTimeout(() => {
                card.classList.add('visible');
              }, delay);

              this.observer.unobserve(card);
            }
          });
        }, options);

        this.cards.forEach((card) => {
          this.observer.observe(card);
        });
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }
    }

    customElements.define('product-cards-{{ ai_gen_id }}', ProductCards{{ ai_gen_id }});
  })();
</script>

