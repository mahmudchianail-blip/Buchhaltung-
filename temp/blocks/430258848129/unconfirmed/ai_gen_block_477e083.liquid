{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-list-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_desktop }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-collection-list__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding_desktop }}px;
  }

  .ai-collection-list__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing_desktop }}px;
  }

  .ai-collection-list__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size_desktop }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-collection-list__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap_desktop }}px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-collection-list__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius_desktop }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-collection-list__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-collection-list__link-{{ ai_gen_id }} {
    display: block;
    position: relative;
    text-decoration: none;
    color: inherit;
    height: 100%;
  }

  .ai-collection-list__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio_desktop }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-collection-list__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .ai-collection-list__item-{{ ai_gen_id }}:hover .ai-collection-list__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-list__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-list__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-list__overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.overlay_padding_desktop }}px;
    background: {{ block.settings.overlay_gradient }};
    color: {{ block.settings.overlay_text_color }};
    transition: background 0.3s ease;
  }

  .ai-collection-list__collection-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_title_size_desktop }}px;
    font-weight: 600;
    margin: 0 0 4px 0;
  }

  .ai-collection-list__collection-count-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_count_size_desktop }}px;
    opacity: 0.9;
    margin: 0;
  }

  .ai-collection-list__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-collection-list__empty-title-{{ ai_gen_id }} {
    font-size: 20px;
    margin: 0 0 8px 0;
    color: #333;
  }

  .ai-collection-list__empty-text-{{ ai_gen_id }} {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-list__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-list-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_mobile }}px 0;
    }

    .ai-collection-list__container-{{ ai_gen_id }} {
      padding: 0;
    }

    .ai-collection-list__header-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.container_padding_mobile }}px;
      margin-bottom: {{ block.settings.heading_spacing_mobile }}px;
    }

    .ai-collection-list__grid-{{ ai_gen_id }} {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      gap: {{ block.settings.grid_gap_mobile }}px;
      padding: 0 {{ block.settings.container_padding_mobile }}px;
      scrollbar-width: none;
    }

    .ai-collection-list__grid-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-collection-list__item-{{ ai_gen_id }} {
      flex: 0 0 {{ block.settings.mobile_card_width }}%;
      scroll-snap-align: start;
      border-radius: {{ block.settings.card_border_radius_mobile }}px;
    }

    .ai-collection-list__image-wrapper-{{ ai_gen_id }} {
      padding-bottom: {{ block.settings.image_ratio_mobile }}%;
    }

    .ai-collection-list__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-collection-list__collection-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.collection_title_size_mobile }}px;
    }

    .ai-collection-list__collection-count-{{ ai_gen_id }} {
      font-size: {{ block.settings.collection_count_size_mobile }}px;
    }

    .ai-collection-list__overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.overlay_padding_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-collection-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-list__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-collection-list__header-{{ ai_gen_id }}">
        <h2 class="ai-collection-list__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.collections != blank %}
      <ul class="ai-collection-list__grid-{{ ai_gen_id }}">
        {% for collection in block.settings.collections %}
          <li class="ai-collection-list__item-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-list__link-{{ ai_gen_id }}">
              <div class="ai-collection-list__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="ai-collection-list__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_ratio_desktop | divided_by: 100 }}"
                  >
                {% else %}
                  <div class="ai-collection-list__placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                <div class="ai-collection-list__overlay-{{ ai_gen_id }}">
                  <h3 class="ai-collection-list__collection-title-{{ ai_gen_id }}">
                    {{ collection.title }}
                  </h3>
                  {% if block.settings.show_product_count %}
                    <p class="ai-collection-list__collection-count-{{ ai_gen_id }}">
                      {{ collection.products_count }}
                      {% if collection.products_count == 1 %}
                        Produkt
                      {% else %}
                        Produkte
                      {% endif %}
                    </p>
                  {% endif %}
                </div>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="ai-collection-list__empty-state-{{ ai_gen_id }}">
        <h3 class="ai-collection-list__empty-title-{{ ai_gen_id }}">Keine Kollektionen ausgewählt</h3>
        <p class="ai-collection-list__empty-text-{{ ai_gen_id }}">
          Fügen Sie Kollektionen hinzu, um sie hier anzuzeigen
        </p>
      </div>
    {% endif %}
  </div>
</div>

