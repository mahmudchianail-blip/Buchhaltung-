<modern-collection-list-{{ ai_gen_id }} class="ai-collection-list-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-list__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-collection-list__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-collection-list__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-collection-list__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-collection-list__grid-{{ ai_gen_id }}">
      {% if block.settings.collection_source == 'all' %}
        {% assign all_collections = collections %}
        {% assign collection_limit = block.settings.max_collections %}
        {% assign collection_counter = 0 %}
        
        {% for collection in all_collections %}
          {% if collection_counter >= collection_limit %}
            {% break %}
          {% endif %}
          
          {% if collection.handle == 'frontpage' or collection.all_products_count == 0 %}
            {% continue %}
          {% endif %}
          
          {% assign collection_counter = collection_counter | plus: 1 %}
          
          <div class="ai-collection-card-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-card__link-{{ ai_gen_id }}">
              <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 600 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="ai-collection-card__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% elsif collection.products.first and collection.products.first.featured_image %}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                    alt="{{ collection.products.first.featured_image.alt | escape }}"
                    class="ai-collection-card__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% else %}
                  <div class="ai-collection-card__placeholder-{{ ai_gen_id }}">
                    {{ 'collection-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
                {% if block.settings.show_overlay %}
                  <div class="ai-collection-card__overlay-{{ ai_gen_id }}"></div>
                {% endif %}
              </div>

              <div class="ai-collection-card__content-{{ ai_gen_id }}">
                <h3 class="ai-collection-card__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                {% if block.settings.show_product_count %}
                  <p class="ai-collection-card__count-{{ ai_gen_id }}">
                    {{ collection.all_products_count }}
                    {% if collection.all_products_count == 1 %}
                      Produkt
                    {% else %}
                      Produkte
                    {% endif %}
                  </p>
                {% endif %}
                {% if block.settings.show_button %}
                  <span class="ai-collection-card__button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                    {% if block.settings.show_button_icon %}
                      <svg class="ai-collection-card__button-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                      </svg>
                    {% endif %}
                  </span>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..block.settings.collection_count) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}

          {% if collection != blank %}
            <div class="ai-collection-card-{{ ai_gen_id }}">
              <a href="{{ collection.url }}" class="ai-collection-card__link-{{ ai_gen_id }}">
                <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
                  {% if collection.featured_image %}
                    <img
                      src="{{ collection.featured_image | image_url: width: 600 }}"
                      alt="{{ collection.featured_image.alt | escape }}"
                      class="ai-collection-card__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    >
                  {% elsif collection.products.first and collection.products.first.featured_image %}
                    <img
                      src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
                      alt="{{ collection.products.first.featured_image.alt | escape }}"
                      class="ai-collection-card__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="{{ 600 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                    >
                  {% else %}
                    <div class="ai-collection-card__placeholder-{{ ai_gen_id }}">
                      {{ 'collection-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  {% if block.settings.show_overlay %}
                    <div class="ai-collection-card__overlay-{{ ai_gen_id }}"></div>
                  {% endif %}
                </div>

                <div class="ai-collection-card__content-{{ ai_gen_id }}">
                  <h3 class="ai-collection-card__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
                  {% if block.settings.show_product_count %}
                    <p class="ai-collection-card__count-{{ ai_gen_id }}">
                      {{ collection.all_products_count }}
                      {% if collection.all_products_count == 1 %}
                        Produkt
                      {% else %}
                        Produkte
                      {% endif %}
                    </p>
                  {% endif %}
                  {% if block.settings.show_button %}
                    <span class="ai-collection-card__button-{{ ai_gen_id }}">
                      {{ block.settings.button_text }}
                      {% if block.settings.show_button_icon %}
                        <svg class="ai-collection-card__button-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <line x1="5" y1="12" x2="19" y2="12"></line>
