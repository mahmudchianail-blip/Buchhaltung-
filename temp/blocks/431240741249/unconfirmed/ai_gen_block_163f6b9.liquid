        {% endif %}
      </div>
    {% endif %}

    <div class="ai-collection-list__grid-{{ ai_gen_id }}">
      {% if block.settings.collection_source == 'all' %}
        {% assign all_collections = collections %}
        {% assign collection_limit = block.settings.max_collections %}
        {% assign collection_counter = 0 %}
        
        {% for collection in all_collections %}
          {% if collection_counter >= collection_limit %}
            {% break %}
          {% endif %}
          
          {% if collection.handle == 'frontpage' or collection.all_products_count == 0 %}
            {% continue %}
          {% endif %}
          
          {% assign collection_counter = collection_counter | plus: 1 %}
          
          <div class="ai-collection-card-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-collection-card__link-{{ ai_gen_id }}">
              <div class="ai-collection-card__image-wrapper-{{ ai_gen_id }}">
                {% if collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="ai-collection-card__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                  >
                {% elsif collection.products.first and collection.products.first.featured_image %}
