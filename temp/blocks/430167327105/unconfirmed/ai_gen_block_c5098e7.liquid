{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.spacing }}px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-image-text-{{ ai_gen_id }}--reverse {
    flex-direction: row-reverse;
  }

  .ai-image-text__image-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    opacity: 0;
    {% if block.settings.animation_direction == 'left' %}
      transform: translateX(-60px);
    {% else %}
      transform: translateX(60px);
    {% endif %}
    transition: opacity {{ block.settings.animation_duration }}s ease-out, transform {{ block.settings.animation_duration }}s ease-out;
  }

  .ai-image-text__image-wrapper-{{ ai_gen_id }}.ai-animate-in {
    opacity: 1;
    transform: translateX(0);
  }

  .ai-image-text__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .ai-image-text__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-image-text__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-image-text__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-image-text__content-{{ ai_gen_id }} {
    flex: 1;
    padding: {{ block.settings.content_padding }}px;
    opacity: 0;
    {% if block.settings.animation_direction == 'left' %}
      transform: translateX(60px);
    {% else %}
      transform: translateX(-60px);
    {% endif %}
    transition: opacity {{ block.settings.animation_duration }}s ease-out {{ block.settings.animation_delay }}s, transform {{ block.settings.animation_duration }}s ease-out {{ block.settings.animation_delay }}s;
  }

  .ai-image-text__content-{{ ai_gen_id }}.ai-animate-in {
    opacity: 1;
    transform: translateX(0);
  }

  .ai-image-text__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-image-text__text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_spacing }}px;
  }

  .ai-image-text__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-image-text__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.spacing | times: 0.7 }}px;
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-image-text-{{ ai_gen_id }}--reverse {
      flex-direction: column;
    }

    .ai-image-text__image-wrapper-{{ ai_gen_id }} {
      flex: 0 0 100%;
      width: 100%;
      transform: translateY(-40px);
    }

    .ai-image-text__image-wrapper-{{ ai_gen_id }}.ai-animate-in {
      transform: translateY(0);
    }

    .ai-image-text__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
      transform: translateY(40px);
    }

    .ai-image-text__content-{{ ai_gen_id }}.ai-animate-in {
      transform: translateY(0);
    }

    .ai-image-text__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-image-text__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<scroll-reveal-{{ ai_gen_id }}
  class="ai-image-text-{{ ai_gen_id }} {% if block.settings.image_position == 'right' %}ai-image-text-{{ ai_gen_id }}--reverse{% endif %}"
  {{ block.shopify_attributes }}
>
  <div class="ai-image-text__image-wrapper-{{ ai_gen_id }}" data-scroll-element>
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 1200 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-image-text__image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-image-text__image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-image-text__empty-state-{{ ai_gen_id }}">
          Bild hinzufügen
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-image-text__content-{{ ai_gen_id }}" data-scroll-element>
    {% if block.settings.heading != blank %}
      <h2 class="ai-image-text__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-image-text__text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-image-text__button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</scroll-reveal-{{ ai_gen_id }}>

<script>
  (function() {
    class ScrollReveal{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.elements = this.querySelectorAll('[data-scroll-element]');
        this.observer = null;
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          root: null,
          rootMargin: '0px 0px -{{ block.settings.animation_trigger_offset }}px 0px',
          threshold: {{ block.settings.animation_threshold }}
        };

        this.observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('ai-animate-in');
              {% if block.settings.animation_once %}
                this.observer.unobserve(entry.target);
              {% endif %}
            } else {
              {% unless block.settings.animation_once %}
                entry.target.classList.remove('ai-animate-in');
              {% endunless %}
            }
          });
        }, options);

        this.elements.forEach((element) => {
          this.observer.observe(element);
        });
      }

      disconnectedCallback() {
        if (this.observer) {
          this.observer.disconnect();
        }
      }
    }

    customElements.define('scroll-reveal-{{ ai_gen_id }}', ScrollReveal{{ ai_gen_id }});
  })();
</script>

