    }

    .ai-product-selector__header-{{ ai_gen_id }} {
      margin-bottom: 30px;
    }

    .ai-product-card__content-{{ ai_gen_id }} {
      padding: 18px 16px;
    }
  }
{% endstyle %}

<div class="ai-product-selector-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-selector__container-{{ ai_gen_id }}">
    <div class="ai-product-selector__header-{{ ai_gen_id }}">
      <h2 class="ai-product-selector__title-{{ ai_gen_id }}">
        <span class="ai-product-selector__title-white-{{ ai_gen_id }}">{{ block.settings.title_part_1 }}</span>
        <span class="ai-product-selector__title-blue-{{ ai_gen_id }}">{{ block.settings.title_part_2 }}</span>
      </h2>
      {% if block.settings.subtitle != blank %}
        <p class="ai-product-selector__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    <div class="ai-product-selector__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign product_key = 'product_' | append: i
          assign badge_key = 'badge_' | append: i
          assign feature_1_key = 'feature_' | append: i | append: '_1'
          assign feature_2_key = 'feature_' | append: i | append: '_2'
          assign feature_3_key = 'feature_' | append: i | append: '_3'
          assign old_price_key = 'old_price_' | append: i
          assign rating_key = 'rating_' | append: i

          assign product = block.settings[product_key]
          assign badge = block.settings[badge_key]
          assign feature_1 = block.settings[feature_1_key]
          assign feature_2 = block.settings[feature_2_key]
          assign feature_3 = block.settings[feature_3_key]
          assign old_price = block.settings[old_price_key]
          assign rating = block.settings[rating_key]
        %}

        <div class="ai-product-card-{{ ai_gen_id }}">
          <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.featured_image.alt | escape }}"
                loading="lazy"
                width="600"
                height="600"
              >
            {% else %}
              <div class="ai-product-card__image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if badge != blank %}
              <div class="ai-product-card__badge-{{ ai_gen_id }}">{{ badge }}</div>
            {% endif %}
          </div>

          <div class="ai-product-card__content-{{ ai_gen_id }}">
            <h3 class="ai-product-card__title-{{ ai_gen_id }}">
              {% if product != blank %}
                {{ product.title }}
              {% else %}
                Produktname {{ i }}
              {% endif %}
            </h3>

            <div class="ai-product-card__rating-{{ ai_gen_id }}">
              <div class="ai-product-card__stars-{{ ai_gen_id }}">
                {% for star in (1..5) %}
                  <span class="ai-product-card__star-{{ ai_gen_id }}">★</span>
                {% endfor %}
              </div>
              <span class="ai-product-card__rating-text-{{ ai_gen_id }}">{{ rating }}</span>
            </div>

            <ul class="ai-product-card__features-{{ ai_gen_id }}">
              {% if feature_1 != blank %}
                <li class="ai-product-card__feature-{{ ai_gen_id }}">
                  <span class="ai-product-card__check-{{ ai_gen_id }}">✓</span>
                  <span>{{ feature_1 }}</span>
                </li>
              {% endif %}
              {% if feature_2 != blank %}
                <li class="ai-product-card__feature-{{ ai_gen_id }}">
                  <span class="ai-product-card__check-{{ ai_gen_id }}">✓</span>
                  <span>{{ feature_2 }}</span>
                </li>
              {% endif %}
              {% if feature_3 != blank %}
                <li class="ai-product-card__feature-{{ ai_gen_id }}">
                  <span class="ai-product-card__check-{{ ai_gen_id }}">✓</span>
                  <span>{{ feature_3 }}</span>
                </li>
              {% endif %}
            </ul>

            <div class="ai-product-card__divider-{{ ai_gen_id }}"></div>

            <div class="ai-product-card__price-section-{{ ai_gen_id }}">
              <div class="ai-product-card__prices-{{ ai_gen_id }}">
                {% if old_price != blank %}
                  <span class="ai-product-card__old-price-{{ ai_gen_id }}">{{ old_price }}</span>
                {% endif %}
                <span class="ai-product-card__new-price-{{ ai_gen_id }}">
                  {% if product != blank %}
                    {{ product.price | money }}
                  {% else %}
                    €999
                  {% endif %}
                </span>
              </div>
              <div class="ai-product-card__stock-badge-{{ ai_gen_id }}">
                {{ block.settings.stock_label }}
              </div>
            </div>

            <button class="ai-product-card__button-{{ ai_gen_id }}" type="button">
              <svg class="ai-product-card__button-icon-{{ ai_gen_id }}" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="8" cy="18" r="2"/>
                <circle cx="16" cy="18" r="2"/>
                <path d="M1 1h3l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L22 6H6"/>
              </svg>
              {{ block.settings.button_text }}
            </button>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

