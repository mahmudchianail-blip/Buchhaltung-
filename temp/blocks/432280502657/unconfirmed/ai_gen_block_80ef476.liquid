{% style %}
  .ai-product-selector-{{ ai_gen_id }} {
    background: radial-gradient(ellipse at center, rgba(47, 110, 216, 0.08) 0%, #050505 70%);
    padding: 60px 20px;
    position: relative;
  }

  .ai-product-selector-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, transparent 0%, rgba(5, 5, 5, 0.6) 100%);
    pointer-events: none;
  }

  .ai-product-selector__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .ai-product-selector__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-product-selector__title-{{ ai_gen_id }} {
    font-size: 38px;
    font-weight: 700;
    margin: 0 0 12px;
    line-height: 1.2;
  }

  .ai-product-selector__title-{{ ai_gen_id }} .ai-product-selector__title-white-{{ ai_gen_id }} {
    color: #ffffff;
  }

  .ai-product-selector__title-{{ ai_gen_id }} .ai-product-selector__title-blue-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
  }

  .ai-product-selector__subtitle-{{ ai_gen_id }} {
    color: #a0a0a0;
    font-size: 16px;
    margin: 0;
    line-height: 1.5;
  }

  .ai-product-selector__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    margin-top: 32px;
  }

  .ai-product-card-{{ ai_gen_id }} {
    background: #111111;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    border-color: rgba(47, 110, 216, 0.4);
    box-shadow: 0 8px 30px rgba(47, 110, 216, 0.15);
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    background: #0a0a0a;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #0a0a0a;
  }

  .ai-product-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 14px;
    left: 14px;
    background: {{ block.settings.accent_color }};
    color: #ffffff;
    padding: 6px 12px;
    border-radius: 6px;
    font-size: 10px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.6px;
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    padding: 20px 18px;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    color: #ffffff;
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-product-card__rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 14px;
  }

  .ai-product-card__stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-product-card__star-{{ ai_gen_id }} {
    color: {{ block.settings.star_color }};
    font-size: 14px;
  }

  .ai-product-card__rating-text-{{ ai_gen_id }} {
    color: #909090;
    font-size: 12px;
    font-weight: 500;
  }

  .ai-product-card__features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 16px;
  }

  .ai-product-card__feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    color: #b0b0b0;
    font-size: 13px;
    line-height: 1.6;
    margin-bottom: 8px;
  }

  .ai-product-card__feature-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-product-card__check-{{ ai_gen_id }} {
    color: {{ block.settings.accent_color }};
    font-size: 14px;
    flex-shrink: 0;
    margin-top: 1px;
    font-weight: 700;
  }

  .ai-product-card__divider-{{ ai_gen_id }} {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 16px 0;
  }

  .ai-product-card__price-section-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .ai-product-card__prices-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .ai-product-card__old-price-{{ ai_gen_id }} {
    color: #707070;
    font-size: 13px;
    text-decoration: line-through;
    font-weight: 500;
  }

  .ai-product-card__new-price-{{ ai_gen_id }} {
    color: #ffffff;
    font-size: 24px;
    font-weight: 700;
    line-height: 1;
  }

  .ai-product-card__stock-badge-{{ ai_gen_id }} {
    background: {{ block.settings.stock_bg_color }};
    color: {{ block.settings.stock_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 9px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-card__button-{{ ai_gen_id }} {
    width: 100%;
    background: #ffffff;
    color: #000000;
    border: none;
    padding: 14px 20px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 700;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .ai-product-card__button-{{ ai_gen_id }}:hover {
    background: #f0f0f0;
    transform: scale(1.02);
  }

  .ai-product-card__button-icon-{{ ai_gen_id }} {
    width: 18px;
    height: 18px;
  }

  @media screen and (max-width: 989px) {
    .ai-product-selector__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
    }

    .ai-product-selector__title-{{ ai_gen_id }} {
      font-size: 32px;
    }

    .ai-product-selector-{{ ai_gen_id }} {
      padding: 50px 20px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-product-selector__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-product-selector__title-{{ ai_gen_id }} {
      font-size: 28px;
    }

    .ai-product-selector__subtitle-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-product-selector-{{ ai_gen_id }} {
