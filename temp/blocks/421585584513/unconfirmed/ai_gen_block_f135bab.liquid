{% doc %}
  @prompt
    A magazine-style editorial layout
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 100%;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.content_spacing }}px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-editorial-hero-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: {{ block.settings.hero_aspect_ratio }};
  }

  .ai-editorial-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-editorial-hero-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-editorial-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}));
    padding: 40px;
    color: {{ block.settings.overlay_text_color }};
  }

  .ai-editorial-hero-category-{{ ai_gen_id }} {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: {{ block.settings.category_color }};
    margin-bottom: 8px;
    display: block;
  }

  .ai-editorial-hero-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_title_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 12px;
    color: {{ block.settings.overlay_text_color }};
  }

  .ai-editorial-hero-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.hero_excerpt_size }}px;
    line-height: 1.5;
    margin: 0;
    opacity: 0.9;
  }

  .ai-editorial-content-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.content_spacing }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-article-{{ ai_gen_id }} {
    background-color: {{ block.settings.article_background }};
    border-radius: {{ block.settings.article_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-editorial-article-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-editorial-article-image-{{ ai_gen_id }} {
    position: relative;
    aspect-ratio: {{ block.settings.article_aspect_ratio }};
    overflow: hidden;
  }

  .ai-editorial-article-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-editorial-article-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-editorial-article-content-{{ ai_gen_id }} {
    padding: {{ block.settings.article_padding }}px;
  }

  .ai-editorial-article-category-{{ ai_gen_id }} {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    color: {{ block.settings.category_color }};
    margin-bottom: 8px;
    display: block;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    font-weight: 600;
    line-height: 1.3;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-editorial-article-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-editorial-article-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-editorial-article-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_excerpt_size }}px;
    line-height: 1.5;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 12px;
  }

  .ai-editorial-article-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-article-author-{{ ai_gen_id }} {
    font-weight: 500;
  }

  .ai-editorial-article-date-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-article-date-{{ ai_gen_id }}::before {
    content: 'â€¢';
    margin-right: 12px;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} h3 {
    font-size: 18px;
    margin: 0 0 8px;
    color: #333;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 990px) {
    .ai-editorial-content-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-editorial-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.8 }}px;
    }

    .ai-editorial-hero-overlay-{{ ai_gen_id }} {
      padding: 30px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-editorial-layout-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 16px;
    }

    .ai-editorial-content-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-editorial-hero-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.hero_title_size | times: 0.7 }}px;
    }

    .ai-editorial-hero-overlay-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-editorial-article-content-{{ ai_gen_id }} {
      padding: {{ block.settings.article_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    {% if block.settings.show_hero and block.settings.featured_article %}
      <article class="ai-editorial-hero-{{ ai_gen_id }}">
        {% if block.settings.featured_article.image %}
          <img
            src="{{ block.settings.featured_article.image | image_url: width: 1200 }}"
            alt="{{ block.settings.featured_article.image.alt | escape }}"
            class="ai-editorial-hero-image-{{ ai_gen_id }}"
            loading="lazy"
            width="{{ block.settings.featured_article.image.width }}"
            height="{{ block.settings.featured_article.image.height }}"
          >
        {% else %}
          <div class="ai-editorial-hero-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
        
        <div class="ai-editorial-hero-overlay-{{ ai_gen_id }}">
          {% if block.settings.show_categories and block.settings.featured_article.tags.size > 0 %}
            <span class="ai-editorial-hero-category-{{ ai_gen_id }}">
              {{ block.settings.featured_article.tags.first }}
            </span>
          {% endif %}
          
          <h2 class="ai-editorial-hero-title-{{ ai_gen_id }}">
            <a href="{{ block.settings.featured_article.url }}">
              {{ block.settings.featured_article.title }}
            </a>
          </h2>
          
          {% if block.settings.show_excerpts and block.settings.featured_article.excerpt != blank %}
            <p class="ai-editorial-hero-excerpt-{{ ai_gen_id }}">
              {{ block.settings.featured_article.excerpt | strip_html | truncate: 150 }}
            </p>
          {% endif %}
        </div>
      </article>
    {% endif %}

    {% if block.settings.blog %}
      <div class="ai-editorial-content-grid-{{ ai_gen_id }}">
        {% assign articles_to_show = block.settings.articles_count %}
        {% assign articles_shown = 0 %}
        
        {% for article in block.settings.blog.articles limit: articles_to_show %}
          {% unless block.settings.show_hero and article.id == block.settings.featured_article.id %}
            <article class="ai-editorial-article-{{ ai_gen_id }}">
              <div class="ai-editorial-article-image-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                  >
                {% else %}
                  <div class="ai-editorial-article-placeholder-{{ ai_gen_id }}">
                    {{ 'image' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              
              <div class="ai-editorial-article-content-{{ ai_gen_id }}">
                {% if block.settings.show_categories and article.tags.size > 0 %}
                  <span class="ai-editorial-article-category-{{ ai_gen_id }}">
                    {{ article.tags.first }}
                  </span>
                {% endif %}
                
                <h3 class="ai-editorial-article-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>
                
                {% if block.settings.show_excerpts and article.excerpt != blank %}
                  <p class="ai-editorial-article-excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | strip_html | truncate: 120 }}
                  </p>
                {% endif %}
                
                {% if block.settings.show_author or block.settings.show_date %}
                  <div class="ai-editorial-article-meta-{{ ai_gen_id }}">
                    {% if block.settings.show_author %}
                      <span class="ai-editorial-article-author-{{ ai_gen_id }}">
                        {{ article.author }}
                      </span>
                    {% endif %}
                    {% if block.settings.show_date %}
                      <time class="ai-editorial-article-date-{{ ai_gen_id }}" datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                        {{ article.published_at | date: '%B %d, %Y' }}
                      </time>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </article>
            {% assign articles_shown = articles_shown | plus: 1 %}
          {% endunless %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
        <h3>Select a blog to display articles</h3>
        <p>Choose a blog from the settings to showcase your editorial content in this magazine-style layout.</p>
      </div>
    {% endif %}
  </div>
</div>

