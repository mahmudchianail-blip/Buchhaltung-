{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background: {{ block.settings.background_color }};
  }

  .ai-featured-collection__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
  }

  .ai-featured-collection__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.description_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif block.settings.text_alignment == 'right' %}
      margin: 0 0 0 auto;
    {% else %}
      margin: 0;
    {% endif %}
    opacity: {{ block.settings.description_opacity | divided_by: 100.0 }};
  }

  .ai-featured-collection__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-featured-collection__product-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_radius }}px;
    background: {{ block.settings.card_background }};
    transition: transform {{ block.settings.hover_duration | divided_by: 1000.0 }}s cubic-bezier(0.16, 1, 0.3, 1), box-shadow {{ block.settings.hover_duration | divided_by: 1000.0 }}s cubic-bezier(0.16, 1, 0.3, 1);
    {% if block.settings.card_border_width > 0 %}
      border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    {% endif %}
  }

  .ai-featured-collection__product-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-featured-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    background: {{ block.settings.image_background }};
  }

  .ai-featured-collection__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform {{ block.settings.image_zoom_duration | divided_by: 1000.0 }}s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ai-featured-collection__product-{{ ai_gen_id }}:hover .ai-featured-collection__image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_zoom_scale | divided_by: 100.0 }});
  }

  .ai-featured-collection__badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_position_top }}px;
    {% if block.settings.badge_position == 'left' %}
      left: {{ block.settings.badge_position_side }}px;
    {% else %}
      right: {{ block.settings.badge_position_side }}px;
    {% endif %}
    background: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    border-radius: {{ block.settings.badge_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    letter-spacing: {{ block.settings.badge_letter_spacing }}px;
    text-transform: uppercase;
    z-index: 2;
  }

  .ai-featured-collection__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-featured-collection__vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_font_size }}px;
    color: {{ block.settings.text_color }};
    opacity: {{ block.settings.vendor_opacity | divided_by: 100.0 }};
    text-transform: uppercase;
    letter-spacing: {{ block.settings.vendor_letter_spacing }}px;
    margin-bottom: {{ block.settings.vendor_spacing }}px;
    font-weight: {{ block.settings.vendor_font_weight }};
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: {{ block.settings.product_title_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.title_bottom_spacing }}px;
    line-height: {{ block.settings.product_title_line_height | divided_by: 100.0 }};
    display: -webkit-box;
    -webkit-line-clamp: {{ block.settings.title_max_lines }};
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-featured-collection__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.price_gap }}px;
    margin-bottom: {{ block.settings.price_bottom_spacing }}px;
  }

  .ai-featured-collection__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
  }

  .ai-featured-collection__compare-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.compare_price_size }}px;
    color: {{ block.settings.text_color }};
    opacity: {{ block.settings.compare_price_opacity | divided_by: 100.0 }};
    text-decoration: line-through;
  }

  .ai-featured-collection__button-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {% if block.settings.button_border_width > 0 %}{{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }}{% else %}none{% endif %};
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    cursor: pointer;
    transition: all {{ block.settings.button_transition | divided_by: 1000.0 }}s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ai-featured-collection__button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-{{ block.settings.button_hover_lift }}px);
  }

  .ai-featured-collection__empty-{{ ai_gen_id }} {
    text-align: center;
    padding: {{ block.settings.empty_state_padding }}px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-featured-collection__empty-icon-{{ ai_gen_id }} {
    width: {{ block.settings.empty_icon_size }}px;
    height: {{ block.settings.empty_icon_size }}px;
    margin: 0 auto {{ block.settings.empty_icon_spacing }}px;
    opacity: 0.3;
  }

  .ai-featured-collection__view-all-{{ ai_gen_id }} {
    text-align: center;
    margin-top: {{ block.settings.view_all_spacing }}px;
  }

  .ai-featured-collection__view-all-link-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.view_all_padding_vertical }}px {{ block.settings.view_all_padding_horizontal }}px;
    background: transparent;
    color: {{ block.settings.heading_color }};
    border: {{ block.settings.view_all_border_width }}px solid {{ block.settings.heading_color }};
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.view_all_font_size }}px;
    font-weight: {{ block.settings.view_all_font_weight }};
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: {{ block.settings.button_letter_spacing }}px;
    transition: all {{ block.settings.button_transition | divided_by: 1000.0 }}s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .ai-featured-collection__view-all-link-{{ ai_gen_id }}:hover {
    background: {{ block.settings.heading_color }};
    color: {{ block.settings.background_color }};
    transform: translateY(-{{ block.settings.button_hover_lift }}px);
  }

  @media screen and (max-width: 989px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__grid-{{ ai_gen_id }} {
      {% if block.settings.columns_mobile == 1 %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}
      gap: {{ block.settings.grid_gap_mobile }}px;
    }

    .ai-featured-collection__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-featured-collection__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding_mobile }}px;
    }

    .ai-featured-collection__product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.product_title_size | times: 0.9 }}px;
    }

    .ai-featured-collection__price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-featured-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collection__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-featured-collection__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-featured-collection__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign collection = block.settings.collection %}
      {% assign products_to_show = block.settings.products_to_show %}

      {% if collection.products.size > 0 %}
        <div class="ai-featured-collection__grid-{{ ai_gen_id }}">
          {% for product in collection.products limit: products_to_show %}
            <div class="ai-featured-collection__product-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-featured-collection__link-{{ ai_gen_id }}">
                <div class="ai-featured-collection__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-featured-collection__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="750"
                    >
                  {% else %}
                    <div class="ai-featured-collection__placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}

                  {% if product.compare_at_price > product.price and block.settings.show_badge %}
                    <div class="ai-featured-collection__badge-{{ ai_gen_id }}">
                      {{ block.settings.badge_text }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-featured-collection__content-{{ ai_gen_id }}">
                  {% if block.settings.show_vendor and product.vendor != blank %}
                    <div class="ai-featured-collection__vendor-{{ ai_gen_id }}">
                      {{ product.vendor }}
                    </div>
                  {% endif %}

                  <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">
                    {{ product.title }}
                  </h3>

                  <div class="ai-featured-collection__price-wrapper-{{ ai_gen_id }}">
                    <span class="ai-featured-collection__price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-featured-collection__compare-price-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                    {% endif %}
                  </div>

                  {% if block.settings.show_button %}
                    <span class="ai-featured-collection__button-{{ ai_gen_id }}">
                      {{ block.settings.button_text }}
                    </span>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_view_all %}
          <div class="ai-featured-collection__view-all-{{ ai_gen_id }}">
            <a href="{{ collection.url }}" class="ai-featured-collection__view-all-link-{{ ai_gen_id }}">
              {{ block.settings.view_all_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-featured-collection__empty-{{ ai_gen_id }}">
          <div class="ai-featured-collection__empty-icon-{{ ai_gen_id }}">
            {{ 'collection-1' | placeholder_svg_tag }}
          </div>
          <p>Diese Kollektion enthält keine Produkte</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-featured-collection__empty-{{ ai_gen_id }}">
        <div class="ai-featured-collection__empty-icon-{{ ai_gen_id }}">
          {{ 'collection-1' | placeholder_svg_tag }}
        </div>
        <p>Wählen Sie eine Kollektion aus, um Produkte anzuzeigen</p>
      </div>
    {% endif %}
  </div>
</div>

