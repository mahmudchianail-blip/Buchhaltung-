{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-grid__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-product-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-product-grid__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-product-grid__scroll-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.card_gap }}px;
    overflow-x: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .ai-product-grid__scroll-container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-product-grid__item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.columns_desktop | minus: 1 }})) / {{ block.settings.columns_desktop }});
  }

  .ai-product-card-{{ ai_gen_id }} {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    background-color: {{ block.settings.card_background }};
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 5 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.5 }});
  }

  .ai-product-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ block.settings.image_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-product-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-product-card-{{ ai_gen_id }}:hover .ai-product-card__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-product-card__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-product-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-product-card__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    z-index: 1;
  }

  .ai-product-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-product-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-product-card__vendor-{{ ai_gen_id }} {
    font-size: {{ block.settings.vendor_size }}px;
    color: {{ block.settings.vendor_color }};
    margin: 0 0 8px 0;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-product-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-product-card__price--compare-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-product-card__price--sale-{{ ai_gen_id }} {
    color: {{ block.settings.sale_price_color }};
  }

  .ai-product-grid__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-product-grid__empty-state-{{ ai_gen_id }} p {
    font-size: 16px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-product-grid__item-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-product-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-product-card__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-product-grid__item-{{ ai_gen_id }} {
      width: calc((100% - {{ block.settings.card_gap }}px * ({{ block.settings.columns_tablet | minus: 1 }})) / {{ block.settings.columns_tablet }});
    }
  }
{% endstyle %}

<product-grid-{{ ai_gen_id }} class="ai-product-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-product-grid__header-{{ ai_gen_id }}">
        <h2 class="ai-product-grid__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if block.settings.products != blank and block.settings.products.size > 0 %}
      <div class="ai-product-grid__wrapper-{{ ai_gen_id }}">
        <div class="ai-product-grid__scroll-container-{{ ai_gen_id }}">
          {% for product in block.settings.products %}
            <div class="ai-product-grid__item-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-product-card-{{ ai_gen_id }}">
                <div class="ai-product-card__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 800 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-product-card__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="800"
                      height="{{ 800 | times: block.settings.image_ratio | divided_by: 100 }}"
                    >
                  {% else %}
                    <div class="ai-product-card__image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}

                  {% if block.settings.show_sale_badge and product.compare_at_price > product.price %}
                    <div class="ai-product-card__badge-{{ ai_gen_id }}">
                      Sale
                    </div>
                  {% endif %}
                </div>

                <div class="ai-product-card__content-{{ ai_gen_id }}">
                  {% if block.settings.show_vendor and product.vendor != blank %}
                    <div class="ai-product-card__vendor-{{ ai_gen_id }}">{{ product.vendor }}</div>
                  {% endif %}

                  <h3 class="ai-product-card__title-{{ ai_gen_id }}">{{ product.title }}</h3>

                  {% if block.settings.show_price %}
                    <div class="ai-product-card__price-{{ ai_gen_id }}">
                      {% if product.compare_at_price > product.price %}
                        <span class="ai-product-card__price--compare-{{ ai_gen_id }}">
                          {{ product.compare_at_price | money }}
                        </span>
                        <span class="ai-product-card__price--sale-{{ ai_gen_id }}">
                          {{ product.price | money }}
                        </span>
                      {% else %}
                        {{ product.price | money }}
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
              </a>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="ai-product-grid__empty-state-{{ ai_gen_id }}">
        <p>Fügen Sie Produkte hinzu, um sie hier anzuzeigen</p>
      </div>
    {% endif %}
  </div>
</product-grid-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGrid{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.scrollContainer = this.querySelector('.ai-product-grid__scroll-container-{{ ai_gen_id }}');
        if (this.scrollContainer) {
          this.setupTouchScroll();
        }
      }

      setupTouchScroll() {
        let isDown = false;
        let startX;
        let scrollLeft;

        this.scrollContainer.addEventListener('mousedown', (e) => {
          isDown = true;
          this.scrollContainer.style.cursor = 'grabbing';
          startX = e.pageX - this.scrollContainer.offsetLeft;
          scrollLeft = this.scrollContainer.scrollLeft;
        });

        this.scrollContainer.addEventListener('mouseleave', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mouseup', () => {
          isDown = false;
          this.scrollContainer.style.cursor = 'grab';
        });

        this.scrollContainer.addEventListener('mousemove', (e) => {
          if (!isDown) return;
          e.preventDefault();
          const x = e.pageX - this.scrollContainer.offsetLeft;
          const walk = (x - startX) * 2;
          this.scrollContainer.scrollLeft = scrollLeft - walk;
        });
      }
    }

    customElements.define('product-grid-{{ ai_gen_id }}', ProductGrid{{ ai_gen_id }});
  })();
</script>

