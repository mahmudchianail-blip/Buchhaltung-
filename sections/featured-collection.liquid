{%- style -%}
/* === Modern Look (nur diese Section) =================================== */
.section-{{ section.id }}-wrap{
  /* weiß wie die Seite */
  background:#fff;
  /* Tokens */
  --card-bg:#fff;
  --card-brd:rgba(17,24,39,.08);
  --card-brd-hover:rgba(17,24,39,.14);
  --shadow-1:0 10px 30px rgba(0,0,0,.08), 0 2px 10px rgba(0,0,0,.05);
  --shadow-2:0 26px 60px rgba(0,0,0,.16), 0 10px 24px rgba(0,0,0,.12);
  --gap:clamp(12px,2.2vw,20px);
  --brand-grad: linear-gradient(90deg,#34d399 0%,#60a5fa 45%,#a78bfa 100%);
  --title-fs: clamp(1.75rem, 3.6vw, 3rem);
  --title-lh: 1.1;
  --title-ls: -0.02em;
  --title-shadow: 0 1px 0 rgba(0,0,0,.05);
  --desc-max: 72ch;
  --desc-fs: clamp(.95rem, 1.1vw, 1.05rem);
  --desc-color: #6b7280; /* Tailwind gray-500 */
  --mobile-cols: {{ section.settings.columns_mobile | plus: 0 }};
  overflow:hidden;
}

/* Abstand wie vorher, nur gekapselt */
.section-{{ section.id }}-padding{
  padding-top:{{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom:{{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}
@media(min-width:750px){
  .section-{{ section.id }}-padding{
    padding-top:{{ section.settings.padding_top }}px;
    padding-bottom:{{ section.settings.padding_bottom }}px;
  }
}

/* ---------- Titel mittig + Gradient (modern) ---------- */
.section-{{ section.id }}-wrap .collection__title{
  display: grid;
  place-items: center;            /* horizontal + vertikal zentriert */
  gap: .5rem;
  text-align: center;
  margin-bottom: clamp(12px, 2vw, 22px);
  padding-inline: clamp(8px, 2vw, 16px);
}

.section-{{ section.id }}-wrap .collection__title .title{
  display: inline-block;
  font-weight: 800;
  font-size: var(--title-fs);
  line-height: var(--title-lh);
  letter-spacing: var(--title-ls);

  /* Verlaufstext */
  background-image: var(--brand-grad);
  background-size: 200% 100%;
  background-position: 0 0;
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent; /* Safari */
  color: transparent;

  filter: drop-shadow(var(--title-shadow));
  text-wrap: balance; /* schönere Umbrüche bei 2 Zeilen */
}

/* dezente, zentrierte Verlaufs-Unterstreichung */
.section-{{ section.id }}-wrap .collection__title .title::after{
  content: "";
  display: block;
  height: 3px;
  width: clamp(40px, 10vw, 96px);
  margin: .4rem auto 0;
  border-radius: 999px;
  background-image: var(--brand-grad);
  opacity: .9;
}

/* sanfter Gradient-Pan NUR bei Hover, respektiert reduced motion */
@media (prefers-reduced-motion: no-preference){
  .section-{{ section.id }}-wrap .collection__title .title:hover{
    animation: gradient-pan 6s linear infinite;
  }
  @keyframes gradient-pan{
    to { background-position: 200% 0; }
  }
}

.section-{{ section.id }}-wrap .collection__description{
  max-width: var(--desc-max);
  margin-inline: auto;
  color: var(--desc-color);
  font-size: var(--desc-fs);
  line-height: 1.65;
  text-wrap: pretty; /* angenehmer Lesefluss */
}

@media(max-width:749px){
  .section-{{ section.id }}-wrap .collection__title{
    padding-inline: clamp(0.75rem, 4vw, 1.25rem);
  }
  .section-{{ section.id }}-wrap .collection__description{
    padding-inline: clamp(0.75rem, 4vw, 1.25rem);
  }
  .section-{{ section.id }}-wrap slider-component{
    display:block;
    padding-inline: clamp(0.75rem, 4vw, 1.25rem);
  }
  .section-{{ section.id }}-wrap .slider--tablet.grid--peek{
    margin: 0;
    width: 100%;
    padding-inline: 0;
    scroll-padding-inline: clamp(0.75rem, 4vw, 1.25rem);
    grid-auto-flow: column;
    grid-template-columns: none;
    grid-auto-columns: minmax(16rem, calc((100% / var(--mobile-cols)) - var(--grid-mobile-horizontal-spacing, 1rem)));
    overflow-x: auto;
    overscroll-behavior-x: contain;
    scroll-snap-type: x proximity;
    -webkit-overflow-scrolling: touch;
  }
  .section-{{ section.id }}-wrap .slider--tablet.grid--peek .grid__item{
    width: auto;
    min-width: 0;
    margin: 0;
    box-sizing: border-box;
    scroll-snap-align: start;
  }
  .section-{{ section.id }}-wrap .slider--tablet.grid--peek .grid__item:first-of-type{
    margin-left: 0;
  }
  .section-{{ section.id }}-wrap .contains-card--product .card{
    border-radius: 18px;
  }
}

/* Hoher Kontrast/Fallbacks für erzwungene Farben */
@media (forced-colors: active){
  .section-{{ section.id }}-wrap .collection__title .title{
    background: none;
    -webkit-text-fill-color: CanvasText;
    color: CanvasText;
    filter: none;
  }
  .section-{{ section.id }}-wrap .collection__title .title::after{
    background: CanvasText;
  }
}


/* ---------- Grid-Abstand ---------- */
.section-{{ section.id }}-wrap .product-grid{ gap:var(--gap); }

/* ---------- Card: Shadow, Lift, Glow ---------- */
.section-{{ section.id }}-wrap .contains-card--product .card{
  border-radius:20px;
  background:var(--card-bg);
  border:1px solid var(--card-brd);
  box-shadow:var(--shadow-1);
  overflow:clip;
  transform:translateY(0) scale(1);
  transition:transform .28s ease, box-shadow .28s ease, border-color .28s ease;
  position:relative;
  isolation:isolate; /* für Glow */
}
.section-{{ section.id }}-wrap .contains-card--product .card::after{
  /* weicher Glow unten */
  content:"";
  position:absolute; inset:auto 14% -10% 14%;
  height:26px; border-radius:999px;
  background:radial-gradient(50% 100% at 50% 0%, rgba(79,70,229,.22), transparent 70%);
  filter:blur(12px);
  opacity:.0; transition:opacity .28s ease, transform .28s ease;
  transform:translateY(6px);
  z-index:-1;
}
.section-{{ section.id }}-wrap .contains-card--product .card:hover,
.section-{{ section.id }}-wrap .contains-card--product .card:focus-within{
  transform:translateY(-6px);
  box-shadow:var(--shadow-2);
  border-color:var(--card-brd-hover);
}
.section-{{ section.id }}-wrap .contains-card--product .card:hover::after{
  opacity:.8; transform:translateY(0);
}

/* Bild-Zoom */
.section-{{ section.id }}-wrap .card__media img,
.section-{{ section.id }}-wrap .card__inner img{
  transform:scale(1);
  transition:transform .55s cubic-bezier(.2,.65,.2,1);
}
.section-{{ section.id }}-wrap .card:hover .card__media img,
.section-{{ section.id }}-wrap .card:hover .card__inner img{ transform:scale(1.06); }

/* Preis & Buttons */
.section-{{ section.id }}-wrap .price{ font-weight:800; letter-spacing:-.01em; }
.section-{{ section.id }}-wrap .button,
.section-{{ section.id }}-wrap .button--secondary{
  border-radius:999px; min-height:44px; padding-inline:18px;
  transition:transform .18s ease, box-shadow .18s ease;
  box-shadow:0 1px 2px rgba(0,0,0,.05);
}
.section-{{ section.id }}-wrap .button:hover{ transform:translateY(-1px); box-shadow:0 10px 24px rgba(0,0,0,.10); }

/* Reveal-Animation pro Karte (nutzt vorhandenes --animation-order) */
@keyframes riseIn{
  from{opacity:0; transform:translateY(18px) scale(.98)}
  to{opacity:1; transform:translateY(0) scale(1)}
}
.section-{{ section.id }}-wrap .grid__item{
  animation:riseIn .55s cubic-bezier(.2,.65,.2,1) both;
  animation-delay:calc(var(--animation-order,1) * 80ms);
}

/* Versand-Info über dem Preis (grün) – bleibt drin */
.section-{{ section.id }}-wrap .price::before,
.section-{{ section.id }}-wrap .card-information .price::before{
  content:"Lieferung 1–3 Werktage · Kostenloser Versand";
  display:block; color:#10b981; font-weight:700;
  font-size:12px; line-height:1.35; margin-bottom:4px; letter-spacing:.01em;
}

/* Desktop: immer 4 Spalten + Slider-Breiten neutralisieren */
@media(min-width:990px){
  #collection-{{ section.id }} .product-grid.grid--4-col-desktop{
    grid-template-columns:repeat(4,minmax(0,1fr))!important;
  }
  #collection-{{ section.id }} .product-grid.grid--4-col-desktop > .grid__item{
    width:auto!important; min-width:0!important; flex:0 0 auto!important;
  }
  /* falls Slider aktiv ist */
  #collection-{{ section.id }} #Slider-{{ section.id }}{
    display:grid!important; grid-template-columns:repeat(4,minmax(0,1fr))!important;
    grid-auto-flow:row!important; gap:var(--gap)!important;
  }
  #collection-{{ section.id }} #Slider-{{ section.id }} > li{
    width:auto!important; min-width:0!important; max-width:none!important; flex:initial!important;
  }
}

/* Accessibility: deutlicher Focus */
.section-{{ section.id }}-wrap :where(a,button,[role="button"]):focus-visible{
  outline:none; box-shadow:0 0 0 3px rgba(99,102,241,.35);
  border-radius:12px;
}

/* Motion-Safe */
@media(prefers-reduced-motion:reduce){
  .section-{{ section.id }}-wrap *{ animation:none!important; transition:none!important }
}
