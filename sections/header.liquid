<link rel="stylesheet" href="{{ 'component-list-menu.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-search.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-menu-drawer.css' | asset_url }}" media="print" onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'component-cart-notification.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

{%- if settings.predictive_search_enabled -%}
  <link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

{%- liquid
  assign header_tag = 'div'

  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif

  assign navigation_links = section.settings.menu.links
-%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="section-header optispar-section-header"
>
  <header class="optispar-header" data-optispar-header>
    <div class="optispar-header__inner">
      <button
        class="optispar-header__menu-toggle optispar-icon-button"
        type="button"
        aria-expanded="false"
        aria-controls="optispar-mobile-overlay"
        data-optispar-menu-toggle
      >
        <span class="svg-wrapper">{{ 'icon-hamburger.svg' | inline_asset_content }}</span>
        <span class="visually-hidden">{{ 'sections.header.menu' | t }}</span>
      </button>

      {%- if section.settings.menu != blank and navigation_links.size > 0 -%}
        <nav class="optispar-nav" aria-label="{{ 'sections.header.navigation' | t }}">
          <ul class="optispar-nav__list" role="list">
            {%- for link in navigation_links -%}
              {%- assign is_active = false -%}
              {%- if link.current or link.active -%}
                {%- assign is_active = true -%}
              {%- endif -%}
              <li class="optispar-nav__item{% if is_active %} is-active{% endif %}">
                <a
                  href="{{ link.url }}"
                  class="optispar-nav__link"
                  {% if is_active %}aria-current="page"{% endif %}
                >
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </nav>
      {%- endif -%}

      <a href="{{ routes.root_url }}" class="optispar-header__brand" aria-label="{{ shop.name }}">
        <span>Optispar</span>
      </a>

      <div class="optispar-header__icons">
        <button
          type="button"
          class="optispar-icon-button optispar-icon-button--search"
          data-optispar-search-toggle
          aria-expanded="false"
          aria-controls="optispar-search-bar"
        >
          <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
          <span class="visually-hidden">{{ 'general.search.search' | t }}</span>
        </button>

        {%- if shop.customer_accounts_enabled -%}
          <a
            href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
            class="optispar-icon-button optispar-icon-button--account"
            rel="nofollow"
          >
            <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
            <span class="visually-hidden">
              {%- liquid
                if customer
                  echo 'customer.account_fallback' | t
                else
                  echo 'customer.log_in' | t
                endif
              -%}
            </span>
          </a>
        {%- endif -%}

        <a
          href="{{ routes.cart_url }}"
          class="optispar-icon-button optispar-icon-button--cart"
          id="cart-icon-bubble"
        >
          <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
          <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
          {%- if cart != empty -%}
            <span class="optispar-cart-count" aria-hidden="true">{{ cart.item_count }}</span>
            <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
          {%- endif -%}
        </a>
      </div>
    </div>

    <div class="optispar-search-bar" id="optispar-search-bar" hidden>
      <form action="{{ routes.search_url }}" method="get" role="search" class="optispar-search-bar__form">
        <label class="visually-hidden" for="OptisparHeaderSearch">{{ 'general.search.search' | t }}</label>
        <input
          class="optispar-search-bar__input"
          id="OptisparHeaderSearch"
          type="search"
          name="q"
          value="{{ search.terms | escape }}"
          placeholder="{{ 'general.search.search' | t }}"
          autocomplete="off"
        >
        <button class="optispar-search-bar__submit optispar-icon-button" aria-label="{{ 'general.search.search' | t }}">
          <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
        </button>
      </form>
      <button
        type="button"
        class="optispar-search-bar__close optispar-icon-button"
        aria-label="{{ 'accessibility.close' | t }}"
        data-optispar-search-close
      >
        <span class="svg-wrapper">{{ 'icon-close.svg' | inline_asset_content }}</span>
      </button>
    </div>

    <div
      class="optispar-mobile-overlay"
      id="optispar-mobile-overlay"
      hidden
      data-optispar-mobile-overlay
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <div class="optispar-mobile-overlay__backdrop" data-optispar-menu-close></div>
      <div class="optispar-mobile-overlay__panel">
        <div class="optispar-mobile-overlay__top">
          <button
            type="button"
            class="optispar-icon-button optispar-icon-button--close"
            data-optispar-menu-close
            aria-label="{{ 'accessibility.close' | t }}"
          >
            <span class="svg-wrapper">{{ 'icon-close.svg' | inline_asset_content }}</span>
          </button>
          <span class="optispar-mobile-overlay__brand">Optispar</span>
          <div class="optispar-mobile-overlay__icons">
            <button
              type="button"
              class="optispar-icon-button optispar-icon-button--search"
              data-optispar-menu-search
              aria-label="{{ 'general.search.search' | t }}"
            >
              <span class="svg-wrapper">{{ 'icon-search.svg' | inline_asset_content }}</span>
            </button>
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="optispar-icon-button optispar-icon-button--account"
                rel="nofollow"
              >
                <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
              </a>
            {%- endif -%}
            <a
              href="{{ routes.cart_url }}"
              class="optispar-icon-button optispar-icon-button--cart"
            >
              <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
            </a>
          </div>
        </div>
        {%- if section.settings.menu != blank and navigation_links.size > 0 -%}
          <nav class="optispar-mobile-overlay__nav" aria-label="{{ 'sections.header.navigation' | t }}">
            <ul class="optispar-mobile-overlay__list" role="list">
              {%- for link in navigation_links -%}
                {%- assign is_active = false -%}
                {%- if link.current or link.active -%}
                  {%- assign is_active = true -%}
                {%- endif -%}
                <li class="optispar-mobile-overlay__item{% if is_active %} is-active{% endif %}">
                  <a
                    href="{{ link.url }}"
                    class="optispar-mobile-overlay__link"
                    {% if is_active %}aria-current="page"{% endif %}
                    data-optispar-menu-close
                  >
                    {{ link.title | escape }}
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {%- endif -%}
      </div>
    </div>
  </header>
</{{ header_tag }}>

{%- if settings.cart_type == 'notification' -%}
  {%- render 'cart-notification',
    color_scheme: section.settings.color_scheme,
    desktop_menu_type: section.settings.menu_type_desktop
  -%}
{%- endif -%}

{% schema %}
{
  "name": "t:sections.header.name",
  "class": "section-header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label",
      "info": "t:sections.header.settings.menu.info"
    },
    {
      "type": "select",
      "id": "sticky_header_type",
      "options": [
        {
          "value": "none",
          "label": "t:sections.header.settings.sticky_header_type.options__1.label"
        },
        {
          "value": "on-scroll-up",
          "label": "t:sections.header.settings.sticky_header_type.options__2.label"
        },
        {
          "value": "always",
          "label": "t:sections.header.settings.sticky_header_type.options__3.label"
        },
        {
          "value": "reduce-logo-size",
          "label": "t:sections.header.settings.sticky_header_type.options__4.label"
        }
      ],
      "default": "on-scroll-up",
      "label": "t:sections.header.settings.sticky_header_type.label"
    },
    {
      "type": "checkbox",
      "id": "show_line_separator",
      "default": true,
      "label": "t:sections.header.settings.show_line_separator.label"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.header__1.content"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "menu_color_scheme",
      "label": "t:sections.header.settings.menu_color_scheme.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.header__utilities.content"
    },
    {
      "type": "checkbox",
      "id": "enable_country_selector",
      "default": true,
      "label": "t:sections.header.settings.enable_country_selector.label",
      "info": "t:sections.header.settings.enable_country_selector.info"
    },
    {
      "type": "checkbox",
      "id": "enable_language_selector",
      "default": true,
      "label": "t:sections.header.settings.enable_language_selector.label",
      "info": "t:sections.header.settings.enable_language_selector.info"
    },
    {
      "type": "checkbox",
      "id": "enable_customer_avatar",
      "default": true,
      "label": "t:sections.header.settings.enable_customer_avatar.label",
      "info": "t:sections.header.settings.enable_customer_avatar.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing"
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.header.settings.margin_bottom.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 36,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ]
}
{% endschema %}
