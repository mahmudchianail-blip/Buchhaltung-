<link rel="stylesheet" href="{{ 'component-search.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-menu-drawer.css' | asset_url }}" media="print" onload="this.media='all'">
<link
  rel="stylesheet"
  href="{{ 'component-cart-notification.css' | asset_url }}"
  media="print"
  onload="this.media='all'"
>

{%- if settings.predictive_search_enabled -%}
  <link rel="stylesheet" href="{{ 'component-price.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

{%- if section.settings.menu_type_desktop == 'mega' -%}
  <link rel="stylesheet" href="{{ 'component-mega-menu.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

<style>
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

  {%- if section.settings.sticky_header_type == 'reduce-logo-size' -%}
    .scrolled-past-header .header__heading-logo-wrapper {
      width: 75%;
    }
  {%- endif -%}

  {%- if section.settings.menu_type_desktop != "drawer" -%}
    @media screen and (min-width: 990px) {
      header-drawer {
        display: none;
      }
    }
  {%- endif -%}

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  .list-menu__item--link {
    text-decoration: none;
    padding-bottom: 1rem;
    padding-top: 1rem;
    line-height: calc(1 + 0.8 / var(--font-body-scale));
  }

  @media screen and (min-width: 750px) {
    .list-menu__item--link {
      padding-bottom: 0.5rem;
      padding-top: 0.5rem;
    }
  }

  .optispar-header-wrapper {
    position: relative;
    isolation: isolate;
  }

  .optispar-header__spacer {
    height: 88px;
  }

  .optispar-header__shell {
    width: 100%;
    max-width: none;
    margin: 0;
    padding: 0;
  }

  .optispar-header__bar {
    position: relative;
    min-height: 76px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0 1.75rem;
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: linear-gradient(135deg, rgba(36, 32, 63, 0.94) 0%, rgba(62, 54, 96, 0.92) 55%, rgba(27, 25, 48, 0.94) 100%);
    box-shadow: 0 18px 38px -28px rgba(9, 8, 20, 0.88);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    overflow: hidden;
    transition: min-height 240ms ease, border-radius 240ms ease, transform 240ms ease, box-shadow 240ms ease;
  }

  .optispar-header.is-condensed .optispar-header__bar {
    min-height: 64px;
    transform: translateY(0);
    border-radius: 20px;
    box-shadow: 0 14px 28px -24px rgba(9, 8, 20, 0.78);
  }

  .optispar-header__main {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    width: 100%;
    max-width: 1180px;
    margin: 0 auto;
    gap: 1.25rem;
    transition: opacity 200ms ease, transform 200ms ease;
  }

  .optispar-header__section {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .optispar-header__section:first-child {
    justify-self: start;
  }

  .optispar-header__section--grow {
    justify-content: center;
    width: 100%;
  }

  .optispar-header__nav {
    justify-self: center;
  }

  .optispar-header__icons {
    justify-self: end;
    justify-content: flex-end;
    gap: 0.75rem;
  }

  .optispar-header__nav-list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.65rem;
    padding: 0;
  }

  .optispar-header__nav-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1.4rem;
    border-radius: 999px;
    color: rgba(236, 240, 255, 0.82);
    background: rgba(255, 255, 255, 0.04);
    box-shadow: none;
    transition: transform 180ms ease, color 180ms ease, background-color 180ms ease, box-shadow 200ms ease;
  }

  .optispar-header__nav-link:hover,
  .optispar-header__nav-link:focus {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.14);
    transform: translateY(-1px) scale(1.02);
    box-shadow: 0 12px 24px -20px rgba(132, 90, 213, 0.7);
  }

  .optispar-header__nav-link.is-active {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.2);
    box-shadow: 0 16px 30px -24px rgba(141, 110, 255, 0.85);
  }

  .optispar-header__icon-button,
  .optispar-header__icon,
  .optispar-header__icon-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 999px;
    color: rgba(228, 234, 255, 0.86);
    background: rgba(255, 255, 255, 0.04);
    border: none;
    transition: color 180ms ease, transform 200ms ease, box-shadow 220ms ease, background-color 200ms ease;
  }

  account-icon.optispar-header__avatar {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 999px;
    overflow: hidden;
  }

  account-icon.optispar-header__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  account-icon.optispar-header__avatar svg {
    width: 1.35rem;
    height: 1.35rem;
    stroke: currentColor;
    fill: none;
    stroke-width: 1.8;
  }

  .optispar-header__icon-button:hover,
  .optispar-header__icon-link:hover,
  .optispar-header__icon-button:focus-visible,
  .optispar-header__icon-link:focus-visible {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.12);
    transform: translateY(-1px) scale(1.05);
    box-shadow: 0 16px 34px -26px rgba(111, 84, 255, 0.75);
    outline: none;
  }

  .optispar-header__icon {
    cursor: pointer;
  }

  .optispar-header__icon svg,
  .optispar-header__icon-button svg,
  .optispar-header__icon-link svg {
    width: 1.25rem;
    height: 1.25rem;
    stroke: currentColor;
    fill: none;
    stroke-width: 1.8;
  }

  .optispar-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .optispar-icon--cart circle,
  .optispar-icon--cart path,
  .optispar-icon--search path,
  .optispar-icon--user path,
  .optispar-icon--menu path,
  .optispar-icon--close path {
    stroke: currentColor;
  }

  .optispar-icon--cart.is-empty {
    opacity: 0.85;
  }

  @keyframes optispar-jiggle {
    0%,
    100% {
      transform: translateY(0) rotate(0);
    }
    50% {
      transform: translateY(-1px) rotate(-2deg);
    }
  }

  @keyframes optispar-wheel-roll {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes optispar-search-tilt {
    0%,
    100% {
      transform: rotate(0deg);
    }
    50% {
      transform: rotate(-14deg);
    }
  }

  @keyframes optispar-user-bob {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-1.5px);
    }
  }

  .optispar-header__icon-button:hover .optispar-icon__cart-body,
  .optispar-header__icon-link:hover .optispar-icon__cart-body {
    animation: optispar-jiggle 0.4s ease-in-out;
  }

  .optispar-header__icon-button:hover .optispar-icon__cart-wheel,
  .optispar-header__icon-link:hover .optispar-icon__cart-wheel {
    transform-origin: center;
    animation: optispar-wheel-roll 0.6s ease-out;
  }

  .optispar-header__icon-button:hover .optispar-icon__search-shape {
    transform-origin: center;
    animation: optispar-search-tilt 0.4s ease-in-out;
  }

  .optispar-header__icon-link:hover .optispar-icon__user-head,
  .optispar-header__icon-button:hover .optispar-icon__user-head {
    animation: optispar-user-bob 0.4s ease-in-out;
  }

  .optispar-header__search-panel {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 1.5rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 200ms ease, transform 200ms ease;
    transform: translateY(8px);
    background: linear-gradient(135deg, rgba(35, 32, 57, 0.96) 0%, rgba(57, 50, 92, 0.94) 60%, rgba(27, 25, 48, 0.96) 100%);
  }

  .optispar-header--search-open .optispar-header__search-panel {
    opacity: 1;
    pointer-events: auto;
    transform: translateY(0);
  }

  .optispar-header--search-open .optispar-header__main {
    opacity: 0;
    pointer-events: none;
    transform: translateY(-6px);
  }

  .optispar-header__search-form {
    position: relative;
    width: 100%;
    max-width: 1180px;
    margin: 0 auto;
  }

  .optispar-header__search-field {
    display: flex;
    align-items: center;
    position: relative;
    width: 100%;
  }

  .optispar-header__search-input {
    width: 100%;
    height: 3.25rem;
    padding: 0 3.75rem 0 3.25rem;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.16);
    background: rgba(15, 17, 32, 0.48);
    color: #ffffff;
    font-size: 0.98rem;
    transition: border-color 180ms ease, background-color 180ms ease, box-shadow 220ms ease;
  }

  .optispar-header__search-input::placeholder {
    color: rgba(214, 220, 255, 0.65);
  }

  .optispar-header__search-input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.42);
    background: rgba(24, 27, 52, 0.72);
    box-shadow: 0 0 0 3px rgba(140, 120, 255, 0.32);
  }

  .optispar-header__search-icon,
  .optispar-header__search-close {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 999px;
    color: rgba(214, 220, 255, 0.72);
  }

  .optispar-header__search-icon {
    left: 0.75rem;
    pointer-events: none;
  }

  .optispar-header__search-close {
    right: 0.75rem;
    border: none;
    background: transparent;
    transition: color 180ms ease, transform 200ms ease;
  }

  .optispar-header__search-close:hover,
  .optispar-header__search-close:focus-visible {
    color: #ffffff;
    transform: translateY(-50%) scale(1.08) rotate(6deg);
    outline: none;
  }

  .optispar-header__search-submit {
    display: none;
  }

  .cart-count-bubble {
    top: -0.35rem;
    right: -0.35rem;
    background: linear-gradient(140deg, #ff6b9a 0%, #8858ff 80%);
    color: #fff;
    font-weight: 600;
    border: 2px solid rgba(10, 3, 21, 0.8);
  }

  .optispar-header__mobile {
    position: fixed;
    inset: 0.75rem;
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    background: linear-gradient(140deg, rgba(26, 23, 43, 0.9) 0%, rgba(41, 37, 66, 0.92) 60%, rgba(19, 18, 35, 0.92) 100%);
    backdrop-filter: blur(18px);
    -webkit-backdrop-filter: blur(18px);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.08);
    box-shadow: 0 26px 54px -36px rgba(0, 0, 0, 0.82);
    opacity: 0;
    transform: scale(0.97);
    transition: opacity 220ms ease, transform 240ms ease;
    pointer-events: none;
  }

  .optispar-header__mobile.is-open {
    opacity: 1;
    transform: scale(1);
    pointer-events: auto;
  }

  .optispar-header__mobile-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .optispar-header__mobile-brand .header__heading-link {
    color: #ffffff;
    font-size: 1.875rem;
    font-weight: 600;
  }

  .optispar-header__mobile-icons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .optispar-header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1.5rem;
    overflow-y: auto;
  }

  .optispar-header__mobile-link {
    display: block;
    padding: 0.9rem 1.25rem;
    border-radius: 1.1rem;
    text-align: center;
    font-size: 1.05rem;
    color: rgba(236, 240, 255, 0.85);
    background: rgba(255, 255, 255, 0.08);
    transition: transform 200ms ease, background-color 200ms ease, color 180ms ease;
  }

  .optispar-header__mobile-link:hover,
  .optispar-header__mobile-link:focus {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.18);
    transform: translateY(-1px) scale(1.02);
  }

  .optispar-header__mobile-link.is-active {
    background: linear-gradient(135deg, rgba(128, 90, 213, 0.7) 0%, rgba(59, 19, 112, 0.7) 100%);
    color: #ffffff;
  }

  .optispar-header__mobile-close,
  .optispar-header__toggle {
    border: none;
    background: transparent;
    cursor: pointer;
    padding: 0;
  }

  .optispar-header__mobile-close .optispar-icon,
  .optispar-header__toggle .optispar-icon {
    width: 2.5rem;
    height: 2.5rem;
  }

  @media screen and (min-width: 990px) {
    .optispar-header__shell {
      padding: 0;
    }

    .optispar-header__bar {
      min-height: 84px;
    }

    .optispar-header__nav-link {
      padding-inline: 1.6rem;
    }
  }

  @media screen and (max-width: 989px) {
    .optispar-header__shell {
      padding: 0;
    }

    .optispar-header__section--grow {
      justify-content: flex-start;
    }

    .optispar-header__nav {
      display: none;
    }

    .optispar-header__spacer {
      height: 76px;
    }
  }
</style>

{%- style -%}
  .header {
    padding: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px 0;
  }

  .section-header {
    position: sticky; /* This is for fixing a Safari z-index issue. PR #2147 */
    margin-bottom: {{ section.settings.margin_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-header {
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>

{%- liquid
  for block in section.blocks
    if block.type == '@app'
      assign has_app_block = true
    endif
  endfor
-%}

{% liquid
  assign header_tag = 'div'

  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="header-wrapper optispar-header-wrapper color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  {%- liquid
    assign social_links = false
    assign localization_forms = false

    if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
      assign social_links = true
    endif

    if localization.available_countries.size > 1 and section.settings.enable_country_selector or section.settings.enable_language_selector and localization.available_languages.size > 1
      assign localization_forms = true
    endif
  -%}
  {%- capture optispar_brand_logo -%}
    {%- if settings.logo != blank -%}
      <div class="header__heading-logo-wrapper">
        {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
        {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
        {% capture sizes %}(max-width: {{ settings.logo_width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
        {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
        {{
          settings.logo
          | image_url: width: 600
          | image_tag:
            class: 'header__heading-logo motion-reduce',
            widths: widths,
            height: logo_height,
            width: settings.logo_width,
            alt: logo_alt,
            sizes: sizes,
            preload: true
        }}
      </div>
    {%- else -%}
      <span class="h2">{{ shop.name }}</span>
    {%- endif -%}
  {%- endcapture -%}

  {%- capture optispar_brand_anchor -%}
    <a href="{{ routes.root_url }}" class="header__heading-link link link--text focus-inset">
      {{ optispar_brand_logo | strip }}
    </a>
  {%- endcapture -%}

  {%- capture optispar_brand_desktop -%}
    {%- if request.page_type == 'index' -%}
      <h1 class="header__heading">
        {{ optispar_brand_anchor | strip }}
      </h1>
    {%- else -%}
      <div class="header__heading">
        {{ optispar_brand_anchor | strip }}
      </div>
    {%- endif -%}
  {%- endcapture -%}

  {%- capture optispar_brand_mobile -%}
    <div class="header__heading">
      {{ optispar_brand_anchor | strip }}
    </div>
  {%- endcapture -%}

  <div class="optispar-header__spacer" aria-hidden="true"></div>
  <header
    data-optispar-header
    data-optispar-mobile-target="OptisparMobileMenu-{{ section.id }}"
    class="header optispar-header header--{{ section.settings.logo_position }} header--mobile-{{ section.settings.mobile_logo_position }}{% if section.settings.menu != blank %} header--has-menu{% endif %}{% if has_app_block %} header--has-app{% endif %}{% if social_links %} header--has-social{% endif %}{% if shop.customer_accounts_enabled %} header--has-account{% endif %}{% if localization_forms %} header--has-localizations{% endif %}"
  >
    <div class="optispar-header__shell">
      <div class="optispar-header__bar">
        <div class="optispar-header__main">
          <div class="optispar-header__section">
            <button
              type="button"
              class="optispar-header__toggle optispar-show-mobile optispar-header__icon-button"
              data-optispar-menu-open
              aria-expanded="false"
              aria-controls="OptisparMobileMenu-{{ section.id }}"
            >
              <span class="optispar-icon optispar-icon--menu" aria-hidden="true">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                  <path d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </span>
              <span class="visually-hidden">{{ 'sections.header.menu' | t }}</span>
            </button>
            <div class="optispar-header__brand optispar-header__brand--desktop">
              {{ optispar_brand_desktop | strip }}
            </div>
            <div class="optispar-header__brand optispar-header__brand--mobile">
              {{ optispar_brand_mobile | strip }}
            </div>
          </div>

          {%- if section.settings.menu != blank -%}
            <nav class="optispar-header__section optispar-header__section--grow optispar-header__nav" aria-label="{{ 'sections.header.menu' | t }}">
              <ul class="optispar-header__nav-list">
                {%- for link in section.settings.menu.links -%}
                  <li>
                    <a href="{{ link.url }}" class="optispar-header__nav-link{% if link.active %} is-active{% endif %}">
                      {{ link.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </nav>
          {%- else -%}
            <div class="optispar-header__section optispar-header__section--grow optispar-header__search-placeholder"></div>
          {%- endif -%}

          <div class="optispar-header__section optispar-header__icons{% if section.settings.enable_country_selector or section.settings.enable_language_selector %} header__icons--localization header-localization{% endif %}">
            <div class="desktop-localization-wrapper">
              {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
                <localization-form class="small-hide medium-hide" data-prevent-hide>
                  {%- form 'localization', id: 'HeaderCountryForm', class: 'localization-form' -%}
                    <div>
                      <h2 class="visually-hidden" id="HeaderCountryLabel">{{ 'localization.country_label' | t }}</h2>
                      {%- render 'country-localization', localPosition: 'HeaderCountry' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {% endif %}

              {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
                <localization-form class="small-hide medium-hide" data-prevent-hide>
                  {%- form 'localization', id: 'HeaderLanguageForm', class: 'localization-form' -%}
                    <div>
                      <h2 class="visually-hidden" id="HeaderLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                      {%- render 'language-localization', localPosition: 'HeaderLanguage' -%}
                    </div>
                  {%- endform -%}
                </localization-form>
              {%- endif -%}
            </div>

            <button
              type="button"
              class="optispar-header__icon-button header__icon header__icon--search optispar-header__icon"
              data-optispar-search-open
              aria-expanded="false"
              aria-controls="OptisparHeaderSearch-{{ section.id }}"
              aria-label="{{ 'general.search.search' | t }}"
            >
