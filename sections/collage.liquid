    { "type": "range", "id": "pad_y", "min": 8, "max": 48, "step": 2, "unit": "px", "label": "Innenabstand oben/unten", "default": 18 },
    { "type": "range", "id": "radius", "min": 0, "max": 28, "step": 1, "unit": "px", "label": "Rundung", "default": 16 },
    { "type": "checkbox", "id": "shadow", "label": "Schatten aktivieren", "default": true }
  ],
  "presets": [
    { "name": "Hero • Split (Slim)" }
  ]
}
{% endschema %}
