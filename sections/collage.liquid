{%- style -%}
  .hero-slim-{{ section.id }} {
    --hero-max-h-d: {{ section.settings.max_h_desktop }}px;
    --hero-max-h-m: {{ section.settings.max_h_mobile }}px;
    --hero-radius: {{ section.settings.radius }}px;
    --hero-gap: 20px;
    --hero-pad-y: {{ section.settings.pad_y }}px;
    --hero-pad-x: 22px;
  }
  .hero-slim-{{ section.id }} .wrap {
    max-width: var(--page-width, {{ settings.page_width | default: 1200 }}px);
    margin: 0 auto;
    padding: var(--hero-pad-y) var(--hero-pad-x);
  }
  .hero-slim-{{ section.id }} .card {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--hero-gap);
    align-items: center;
    border-radius: var(--hero-radius);
    background: var(--color-background, transparent);
  }
  @media (min-width: 990px) {
    .hero-slim-{{ section.id }} .card {
      grid-template-columns: 1.15fr 0.85fr;
    }
  }

  /* Text */
  .hero-slim-{{ section.id }} .title { margin: 0 0 8px; line-height: 1.1; }
  .hero-slim-{{ section.id }} .subtitle { margin: 0 0 14px; opacity: .85; }
  .hero-slim-{{ section.id }} .bullets { display: grid; gap: 8px; margin: 14px 0 18px; }
  .hero-slim-{{ section.id }} .bullet { display: grid; grid-template-columns: 22px 1fr; align-items: start; gap: 8px; }
  .hero-slim-{{ section.id }} .check { width: 18px; height: 18px; margin-top: 2px; }

  /* CTA */
  .hero-slim-{{ section.id }} .ctas { display: flex; flex-wrap: wrap; gap: 10px; }
  .hero-slim-{{ section.id }} .btn {
    display: inline-flex; align-items: center; justify-content: center;
    padding: 10px 16px; border-radius: 999px; text-decoration: none;
    border: 1px solid currentColor;
  }
  .hero-slim-{{ section.id }} .btn--primary { background: currentColor; color: var(--color-background, #fff); border-color: currentColor; }
  .hero-slim-{{ section.id }} .btn--ghost { background: transparent; }

  /* Bild */
  .hero-slim-{{ section.id }} .media {
    position: relative; width: 100%;
    max-height: var(--hero-max-h-m);
    border-radius: var(--hero-radius);
    overflow: hidden;
    {% if section.settings.shadow %}box-shadow: 0 12px 32px rgba(0,0,0,.08);{% endif %}
  }
  @media (min-width: 990px) {
    .hero-slim-{{ section.id }} .media { max-height: var(--hero-max-h-d); }
  }
  .hero-slim-{{ section.id }} .media img {
    width: 100%; height: 100%; object-fit: {{ section.settings.image_fit }}; display: block;
  }

  /* Gesamthöhe (kompakt) */
  .hero-slim-{{ section.id }} .card { max-height: var(--hero-max-h-d); }
  @media (max-width: 989.98px) { .hero-slim-{{ section.id }} .card { max-height: none; } }

  /* Farbschemata */
  .hero-slim-{{ section.id }}.scheme-light { color: #111; --color-background: #fff; }
  .hero-slim-{{ section.id }}.scheme-dark  { color: #fff; --color-background: #121212; }
  .hero-slim-{{ section.id }}.scheme-tint  { color: #111; --color-background: {{ settings.colors_accent_1 | default: '#F3F7FF' }}; }

  /* Typo responsiv */
  .hero-slim-{{ section.id }} .title { font-size: clamp(22px, 3.4vw, {{ section.settings.title_size }}px); }
  .hero-slim-{{ section.id }} .subtitle { font-size: clamp(14px, 1.6vw, {{ section.settings.subtitle_size }}px); }

  /* Motion-Respect */
  @media (prefers-reduced-motion: reduce) {
    .hero-slim-{{ section.id }} * { transition: none !important; animation: none !important; }
  }
{%- endstyle -%}

{%- liquid
  assign widths_list = '480,640,750,900,1100,1300,1600,2000' | split: ','
-%}

<section class="hero-slim-{{ section.id }} scheme-{{ section.settings.scheme }}">
  <div class="wrap">
    <div class="card">
      <!-- TEXT -->
      <div class="content">
        {%- if section.settings.kicker != blank -%}
          <div class="kicker" style="opacity:.7; margin-bottom:6px;">{{ section.settings.kicker }}</div>
        {%- endif -%}
        {%- if section.settings.title != blank -%}
          <h1 class="title">{{ section.settings.title }}</h1>
        {%- endif -%}
        {%- if section.settings.subtitle != blank -%}
          <p class="subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}

        {%- if section.settings.b1 != blank or section.settings.b2 != blank or section.settings.b3 != blank or section.settings.b4 != blank -%}
        <div class="bullets">
          {%- if section.settings.b1 != blank -%}
          <div class="bullet">
            <svg class="check" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 16.17l-3.88-3.88-1.42 1.42L9 19 21 7l-1.41-1.41z"/></svg>
            <span>{{ section.settings.b1 }}</span>
          </div>
          {%- endif -%}
          {%- if section.settings.b2 != blank -%}
          <div class="bullet">
            <svg class="check" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 16.17l-3.88-3.88-1.42 1.42L9 19 21 7l-1.41-1.41z"/></svg>
            <span>{{ section.settings.b2 }}</span>
          </div>
          {%- endif -%}
          {%- if section.settings.b3 != blank -%}
          <div class="bullet">
            <svg class="check" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 16.17l-3.88-3.88-1.42 1.42L9 19 21 7l-1.41-1.41z"/></svg>
            <span>{{ section.settings.b3 }}</span>
          </div>
          {%- endif -%}
          {%- if section.settings.b4 != blank -%}
          <div class="bullet">
            <svg class="check" viewBox="0 0 24 24" aria-hidden="true"><path fill="currentColor" d="M9 16.17l-3.88-3.88-1.42 1.42L9 19 21 7l-1.41-1.41z"/></svg>
            <span>{{ section.settings.b4 }}</span>
          </div>
          {%- endif -%}
        </div>
        {%- endif -%}

        <div class="ctas">
          {%- if section.settings.primary_label != blank and section.settings.primary_link != blank -%}
            <a class="btn btn--primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
          {%- endif -%}
          {%- if section.settings.secondary_label != blank and section.settings.secondary_link != blank -%}
            <a class="btn btn--ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
          {%- endif -%}
        </div>
      </div>

      <!-- BILD -->
      <div class="media">
        {%- if section.settings.image != blank -%}
          {%- capture srcset -%}
            {%- for w in widths_list -%}
              {{ section.settings.image | image_url: width: w }} {{ w }}w{% unless forloop.last %}, {% endunless %}
            {%- endfor -%}
          {%- endcapture -%}
          {%- capture sizes -%}
            (min-width: {{ settings.page_width | default: 1200 }}px) 540px,
            (min-width: 990px) 42vw,
            92vw
          {%- endcapture -%}
          <img
            src="{{ section.settings.image | image_url: width: 900 }}"
            srcset="{{ srcset | strip }}"
            sizes="{{ sizes | strip }}"
            alt="{{ section.settings.image.alt | default: section.settings.title | escape }}"
            loading="eager"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- else -%}
          {{ 'hero-apparel-3' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero • Split (Slim)",
  "tag": "section",
  "class": "section",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker (klein)", "default": "Neu bei Optispar" },
    { "type": "inline_richtext", "id": "title", "label": "Titel", "default": "Saug-Halterung – kompakt & stark" },
    { "type": "text", "id": "subtitle", "label": "Untertitel", "default": "Schlankes Design. Starke Haftung. Perfekt für Selfies & Navigation." },

    { "type": "text", "id": "b1", "label": "Bullet 1", "default": "Freihändig" },
    { "type": "text", "id": "b2", "label": "Bullet 2", "default": "Einfache Installation" },
    { "type": "text", "id": "b3", "label": "Bullet 3", "default": "Lange Dauer" },
    { "type": "text", "id": "b4", "label": "Bullet 4", "default": "Starke Haftung" },

    { "type": "text", "id": "primary_label", "label": "Primäre CTA – Text", "default": "Jetzt ansehen" },
    { "type": "url", "id": "primary_link", "label": "Primäre CTA – Link" },
    { "type": "text", "id": "secondary_label", "label": "Sekundäre CTA – Text", "default": "Mehr erfahren" },
    { "type": "url", "id": "secondary_link", "label": "Sekundäre CTA – Link" },

    { "type": "image_picker", "id": "image", "label": "Bild" },
    { "type": "select", "id": "image_fit", "label": "Bild-Fit", "default": "cover", "options": [
      { "value": "cover", "label": "Cover (füllend)" },
      { "value": "contain", "label": "Contain (komplett sichtbar)" }
    ]},

    { "type": "select", "id": "scheme", "label": "Farbschema", "default": "light", "options": [
      { "value": "light", "label": "Hell" },
      { "value": "dark", "label": "Dunkel" },
      { "value": "tint", "label": "Zarte Tönung" }
    ]},

    { "type": "range", "id": "title_size", "min": 22, "max": 48, "step": 1, "unit": "px", "label": "Titelgröße max.", "default": 40 },
    { "type": "range", "id": "subtitle_size", "min": 12, "max": 22, "step": 1, "unit": "px", "label": "Untertitelgröße max.", "default": 16 },

    { "type": "range", "id": "max_h_desktop", "min": 280, "max": 560, "step": 10, "unit": "px", "label": "Max-Höhe Desktop", "default": 420 },
