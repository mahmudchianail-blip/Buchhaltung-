{% comment %}
  Optispar – Rich Text (white background, brand-only animation)
  - Clean white card, no global animated background
  - Only the word “Optispar” gets a subtle animated gradient text effect
  - Smooth, accessible (respects reduced motion)
{% endcomment %}

{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px; padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px; }
  @media screen and (min-width: 750px) { .section-{{ section.id }}-padding { padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px; } }

  /* ===== Clean white card ===== */
  .opti-card {
    background: #fff; /* bleibt weiß */
    border-radius: {{ section.settings.corner_radius }}px;
    box-shadow: 0 10px 24px rgba(0,0,0,{{ section.settings.shadow_strength | divided_by: 100.0 }});
  }

  .opti-content { max-width: {{ section.settings.max_width }}px; margin-inline: auto; }

  /* Headings */
  .opti-heading { line-height: 1.1; }

  /* ===== Brand-only animation: the word with span.opti-brand ===== */
  .opti-brand {
    background: linear-gradient(90deg, {{ section.settings.brand_color_1 }}, {{ section.settings.brand_color_2 }}, {{ section.settings.brand_color_3 }}, {{ section.settings.brand_color_2 }});
    -webkit-background-clip: text; background-clip: text; color: transparent;
    background-size: 300% 100%;
    animation: opti-gradient-move 6s ease-in-out infinite;
  }
  @keyframes opti-gradient-move { 0%{background-position:0% 50%} 50%{background-position:100% 50%} 100%{background-position:0% 50%} }

  /* Optional underline that only reacts on hover */
  .opti-underline { position: relative; }
  .opti-underline:after { content:""; position:absolute; left:0; bottom:-.25em; width:0; height:3px; background: currentColor; opacity:.18; transition: width .4s ease; }
  .opti-underline:hover:after { width: 55%; }

  /* Body text */
  .opti-text { font-size: clamp(1rem, .95rem + .25vw, 1.125rem); }

  /* Buttons – dezente Interaktion */
  .opti-buttons .button { border-radius: 999px; transition: transform .15s ease, box-shadow .15s ease; }
  .opti-buttons .button:hover { transform: translateY(-2px); box-shadow: 0 8px 18px rgba(0,0,0,.1); }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) { .opti-brand { animation: none; } .opti-underline:after { transition: none; } }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="opti-card rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }} opti-content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2 class="opti-heading opti-underline rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                  {{ block.shopify_attributes }} {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                {%- comment -%}
                  To animate only the word Optispar, wrap it: <span class="opti-brand">Optispar</span>
                {%- endcomment -%}
                {{ block.settings.heading | replace: 'Optispar', '<span class="opti-brand">Optispar</span>' }}
              </h2>
            {%- when 'caption' -%}
              <p class="rich-text__caption {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} caption-with-letter-spacing"
                 {{ block.shopify_attributes }} {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div class="opti-text rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                   {{ block.shopify_attributes }} {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div class="opti-buttons rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                   {{ block.shopify_attributes }} {% if settings.animations_reveal_on_scroll %}data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                {%- if block.settings.button_label != blank -%}
                  <a {% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %}
                     class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                    {{- block.settings.button_label | escape -}}
                  </a>
                {%- endif -%}
                {%- if block.settings.button_label_2 != blank -%}
                  <a {% if block.settings.button_link_2 == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link_2 }}"{% endif %}
                     class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}">
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

