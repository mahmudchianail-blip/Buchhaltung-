  <script>
    // Lucide Icons initialisieren
    lucide.createIcons();

    const introBlock = document.getElementById('introBlock');
    const featuresBlock = document.getElementById('featuresBlock');
    const phone3D = document.getElementById('phone3D');
    const stripLayer = document.getElementById('stripLayer');
    const trayLayer = document.getElementById('trayLayer');
    const glassReflection = document.getElementById('glassReflection');
    const stepDot = document.getElementById('stepDot');
    const stepLabel = document.getElementById('stepLabel');
    const glowA = document.getElementById('glowA');
    const glowB = document.getElementById('glowB');

    let isMobile = window.innerWidth < 1024;

    function clamp01(v){ return Math.min(1, Math.max(0, v)); }

    function updateMobile(){
      isMobile = window.innerWidth < 1024;
      update(); // recalc transforms on breakpoint change
    }

    function update(){
      const scrollY = window.scrollY || 0;

      // 1. Strip Animation
      const stripDownProgress = clamp01(scrollY / 300);
      const stripOutProgress = clamp01((scrollY - 300) / 150);

      // 2. Tray Lift
      const trayProgress = clamp01((scrollY - 450) / 300);

      // 3. Text Transition
      const textSwitchProgress = clamp01((scrollY - 700) / 300);
      const introOpacity = 1 - textSwitchProgress;
      const featuresOpacity = textSwitchProgress;
      const featuresTranslateY = 30 - (textSwitchProgress * 30);

      // 4. Phone Rotation
      const presentationProgress = clamp01((scrollY - 700) / 400);
      const containerRotationX = 20 - (presentationProgress * 20);
      const containerRotationY = -10 + (presentationProgress * 10);

      const animationScale = isMobile ? 0.55 : (1 - (presentationProgress * 0.15));
      const trayLiftDistance = isMobile ? -220 : -300;

      // Step label + dot style
      let label = "1. Staub Entfernen";
      if (stripDownProgress >= 1 && trayProgress < 0.9) label = "2. Tray Anheben";
      if (trayProgress >= 0.9) label = "Perfekt";
      stepLabel.textContent = label;

      if (stripDownProgress >= 1){
        stepDot.style.backgroundColor = "#bef264";
        stepDot.style.boxShadow = "0 0 10px #bef264";
      } else {
        stepDot.style.backgroundColor = "#fb923c"; // orange-400
        stepDot.style.boxShadow = "none";
      }

      // Intro / Features blocks
      introBlock.style.opacity = introOpacity.toFixed(3);
      introBlock.style.pointerEvents = introOpacity > 0.1 ? "auto" : "none";

      featuresBlock.style.opacity = featuresOpacity.toFixed(3);
      featuresBlock.style.transform = `translateY(${featuresTranslateY}px)`;
      featuresBlock.style.pointerEvents = featuresOpacity > 0.5 ? "auto" : "none";

      // Background glows
      glowA.style.opacity = (0.5 + stripDownProgress * 0.3).toFixed(3);
      glowB.style.opacity = (featuresOpacity * 0.4).toFixed(3);

      // Phone 3D transform
      phone3D.style.transform =
        `rotateX(${containerRotationX}deg) rotateY(${containerRotationY}deg) scale(${animationScale})`;

      // Strip layer transform
      const stripTranslateY = stripDownProgress * 110; // %
      const stripTranslateX = stripOutProgress * 200;  // %
      stripLayer.style.transform =
        `translateZ(4px) translateY(${stripTranslateY}%) translateX(${stripTranslateX}%)`;
      stripLayer.style.opacity = (1 - stripOutProgress).toFixed(3);

      // Tray layer transform + opacity
      const trayZ = 10 + trayProgress * 500;
      const trayRotX = trayProgress * 60;
      const trayY = trayProgress * trayLiftDistance;

      trayLayer.style.transform =
        `translateZ(${trayZ}px) rotateX(${trayRotX}deg) translateY(${trayY}px)`;
      trayLayer.style.opacity = (1 - trayProgress).toFixed(3);

      // Glass reflection
      glassReflection.style.opacity = trayProgress.toFixed(3);
    }

    window.addEventListener('scroll', update, { passive: true });
    window.addEventListener('resize', updateMobile);

    // Initial
    updateMobile();
  </script>
